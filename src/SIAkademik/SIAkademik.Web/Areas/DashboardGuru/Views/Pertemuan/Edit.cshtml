@using SIAkademik.Web.Areas.DashboardGuru.Models.PertemuanModels

@model EditVM


<!-- Breadcrumb -->
<div class="row" style="justify-content: center;">
    <div class="col-12 col-md-6 col-lg-6" style="padding: 0;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="JadwalMengajar" asp-action="Index">Jadwal Mengajar</a></li>
            <li class="breadcrumb-item"><a href="#">Detail Data</a></li>
            <li class="breadcrumb-item">Edit Pertemuan</li>
        </ol>
    </nav>
    </div>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card card-warning">
                <div class="card-header" style="padding-top: 20px;">
                    <h4>Edit Data Pertemuan</h4>
                </div>

                <form asp-action="Edit" method="post" class="container">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input asp-for="@Model.Id" readonly hidden />

                        <div class="form-group">
                            <label asp-for="@Model.Nomor"></label>
                            <input asp-for="@Model.Nomor" class="form-control" />
                            <span asp-validation-for="@Model.Nomor"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.TanggalPelaksanaan"></label>
                            <input asp-for="@Model.TanggalPelaksanaan" type="date" class="form-control" />
                            <span asp-validation-for="@Model.TanggalPelaksanaan"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Keterangan"></label>
                            <textarea asp-for="@Model.Keterangan" class="form-control"></textarea>
                            <span asp-validation-for="@Model.Keterangan"></span>
                        </div>
                    </div>
                    

                    

                    <div class="card-footer text-right pt-0">
                        <a href="javascript:void(0)" class="btn btn-danger text-white swal-cancel">Batal</a>
                        <button class="btn btn-primary mr-1" type="submit">Simpan</button>
                    </div>                   
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
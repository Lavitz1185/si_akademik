@using SIAkademik.Web.Areas.DashboardGuru.Models.PertemuanModels

@model JadwalMengajar

@inject ITujuanPembelajaranRepository TujuanPembelajaranRepository

@{
    var daftarTujuanPembelajaran = await TujuanPembelajaranRepository.GetAll(Model.MataPelajaran.Id, Model.Rombel.Kelas.Jenjang);
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="JadwalMengajar" asp-action="Index">Jadwal Mengajar</a></li>
            <li class="breadcrumb-item" aria-current="page">Detail Data</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-primary mb-2">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Jadwal Mengajar</h4>
                </div>
                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Tahun Ajaran</div>
                                <div class="col">@Model.Rombel.TahunAjaran.Periode - @Model.Rombel.TahunAjaran.Semester.Humanize()</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Kelas</div>
                                <div class="col">@Model.Rombel.Kelas.Jenjang.Humanize() @Model.Rombel.Kelas.Peminatan.Nama @Model.Rombel.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Mata Pelajaran</div>
                                <div class="col">@Model.MataPelajaran.Nama @Model.MataPelajaran.Peminatan.Nama</div>
                            </div>
                        </div>

                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Guru</div>
                                <div class="col">@Model.Pegawai.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Wali Kelas</div>
                                <div class="col">@Model.Rombel.Wali.Nama</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-info">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Informasi Detail Jadwal Mengajar</h4>
                </div>

                <div class="card-body mt-3">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                               aria-controls="home" aria-selected="true">Daftar Pertemuan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Daftar Siswa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#ketiga" role="tab"
                               aria-controls="profile" aria-selected="false">Target Capain TP (Tujuan Pembelajaran)</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="mb-3 mt-2">
                                <button type="button" class="btn btn-primary" onclick="openTambahModal(@Model.Id)">
                                    + Tambah Pertemuan
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="table-akun">
                                    <thead>
                                        <tr>
                                            <th>Nomor</th>
                                            <th>Tanggal Pelaksanaan</th>
                                            <th>Status</th>
                                            <th>Keterangan</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pertemuan in Model.DaftarPertemuan.OrderBy(p => p.Nomor))
                                        {
                                            <tr>
                                                <td>@pertemuan.Nomor</td>
                                                <td>
                                                    @pertemuan.TanggalPelaksanaan.ToString(CultureInfos.CI.DateTimeFormat.LongDatePattern, CultureInfos.CI)
                                                </td>
                                                <td>@pertemuan.StatusPertemuan.Humanize()</td>
                                                <td>@pertemuan.Keterangan</td>
                                                <td>
                                                    @if (pertemuan.StatusPertemuan == StatusPertemuan.BelumMulai)
                                                    {
                                                        <a asp-action="Mulai" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id" class="btn btn-success"><i class="fas fa-play mr-2"></i>Mulai</a>
                                                    }

                                                    @if (pertemuan.StatusPertemuan == StatusPertemuan.Berjalan)
                                                    {
                                                        <form asp-action="Akhiri" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id" style="display:inline">
                                                            <button type="submit" class="btn btn-danger"><i class="fas fa-stop mr-2" data-toggle="tooltip" title="Akhiri Pertemuan"></i>Akhiri</button>
                                                        </form>
                                                    }

                                                    @if (pertemuan.StatusPertemuan != StatusPertemuan.BelumMulai)
                                                    {
                                                        <a asp-action="Absen" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id" class="btn btn-success" data-toggle="tooltip" title="Absen Pertemuan"><i class="fas fa-clipboard-check mr-2"></i>Absen</a>
                                                        <a asp-action="Edit" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id" class="btn btn-primary" data-toggle="tooltip" title="Edit Pertemuan"><i class="fas fa-pencil-alt mr-2"></i>Edit</a>
                                                    }

                                                    <form asp-action="Hapus" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id" style="display:inline">
                                                        <button type="submit" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Pertemuan">
                                                            <i class="fas fa-trash mr-2"></i>Hapus
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="table-akun0">
                                    <thead>
                                        <tr>
                                            <th>NIS</th>
                                            <th>NISN</th>
                                            <th>Nama</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var anggotaRombel in Model.Rombel.DaftarAnggotaRombel)
                                        {
                                            <tr>
                                                <td>@anggotaRombel.Siswa.NIS</td>
                                                <td>@anggotaRombel.Siswa.NISN</td>
                                                <td>@anggotaRombel.Siswa.Nama</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="ketiga" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="mb-3 mt-2">
                                <button type="button" class="btn btn-primary btn-tambah-tp">
                                    + Tambah
                                </button>
                                <div class="form-tambah-tp" style="display:none">
                                    <form asp-action="Tambah" asp-controller="AsesmenSumatif"
                                          asp-route-idJadwalMengajar="@Model.Id" method="post">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalTambahTitle">Tambah Target Capain TP</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>

                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="idTujuanPembelajaran">Tujuan Pembelajaran</label>
                                                <select id="idTujuanPembelajaran"
                                                        name="idTujuanPembelajaran"
                                                        class="form-control"
                                                        data-val="true"
                                                        data-val-required="Tujuan Pembelajaran harus dipilih">
                                                    <option value="@null">-- Pilih Tujuan Pembelajaran --</option>
                                                    @foreach (var tp in daftarTujuanPembelajaran.Where(t => !Model.DaftarAsesmenSumatif.Any(a => a.TujuanPembelajaran == t)))
                                                    {
                                                        <option value="@tp.Id">@tp.Nomor). @tp.Deskripsi</option>
                                                    }
                                                </select>
                                                <span class="text-danger" data-valmsg-for="idTujuanPembelajaran" data-valmsg-replace="true"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="batasBawahCukup">Batas Bawah Cukup</label>
                                                <input id="batasBawahCukup"
                                                       name="batasBawahCukup" class="form-control"
                                                       data-val="true"
                                                       data-val-required="Batas Bawah Cukup harus diisi"
                                                       data-val-range="Batas Bawah Cukup harus 0-100"
                                                       data-val-range-min="0"
                                                       data-val-range-max="100" />
                                                <span class="text-danger" data-valmsg-for="batasBawahCukup" data-valmsg-replace="true"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="batasBawahBaik">Batas Bawah Baik</label>
                                                <input id="batasBawahBaik"
                                                       name="batasBawahBaik" class="form-control"
                                                       data-val="true"
                                                       data-val-required="Batas Bawah Baik harus diisi"
                                                       data-val-range="Batas Bawah Baik harus 0-100"
                                                       data-val-range-min="0"
                                                       data-val-range-max="100" />
                                                <span class="text-danger" data-valmsg-for="batasBawahBaik" data-valmsg-replace="true"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="batasBawahSangatBaik">Batas Bawah Sangat Baik</label>
                                                <input id="batasBawahSangatBaik"
                                                       name="batasBawahSangatBaik" class="form-control"
                                                       data-val="true"
                                                       data-val-required="Batas Bawah Sangat Baik harus diisi"
                                                       data-val-range="Batas Bawah Sangat Baik harus 0-100"
                                                       data-val-range-min="0"
                                                       data-val-range-max="100" />
                                                <span class="text-danger" data-valmsg-for="batasBawahSangatBaik" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                                            <button type="submit" class="btn btn-primary">Simpan</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="table-akun0">
                                    <thead>
                                        <tr>
                                            <th>Nomor</th>
                                            <th>TP</th>
                                            <th>Batas Bawah Cukup</th>
                                            <th>Batas Bawah Baik</th>
                                            <th>Batas Bawah Sangat Baik</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var asesmenSumatif in Model.DaftarAsesmenSumatif)
                                        {
                                            <tr>
                                                <td>@asesmenSumatif.TujuanPembelajaran.Nomor</td>
                                                <td>@asesmenSumatif.TujuanPembelajaran.Deskripsi</td>
                                                <td>@asesmenSumatif.BatasBawahCukup.ToString("F2")</td>
                                                <td>@asesmenSumatif.BatasBawahBaik.ToString("F2")</td>
                                                <td>@asesmenSumatif.BatasBawahSangatBaik.ToString("F2")</td>
                                                <td>
                                                    <button class="btn btn-primary btn-edit-tp" data-toggle="tooltip" title="Edit Target Capain TP">
                                                        <i class="fas fa-pencil-alt mr-2"></i>Edit
                                                    </button>
                                                    <div class="form-edit-tp" style="display:none">
                                                        <form asp-action="Edit" asp-controller="AsesmenSumatif"
                                                              asp-route-id="@asesmenSumatif.Id" 
                                                              asp-route-idJadwalMengajar="@Model.Id"
                                                              method="post">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="modalTambahTitle">Edit Target Capain TP</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>

                                                            <div class="modal-body">
                                                                <div class="form-group">
                                                                    <label for="batasBawahCukup">Batas Bawah Cukup</label>
                                                                    <input id="batasBawahCukup"
                                                                           name="batasBawahCukup" class="form-control"
                                                                           value="@asesmenSumatif.BatasBawahCukup"
                                                                           data-val="true"
                                                                           data-val-required="Batas Bawah Cukup harus diisi"
                                                                           data-val-range="Batas Bawah Cukup harus 0-100"
                                                                           data-val-range-min="0"
                                                                           data-val-range-max="100" />
                                                                    <span class="text-danger" data-valmsg-for="batasBawahCukup" data-valmsg-replace="true"></span>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="batasBawahBaik">Batas Bawah Baik</label>
                                                                    <input id="batasBawahBaik"
                                                                           name="batasBawahBaik" class="form-control"
                                                                           value="@asesmenSumatif.BatasBawahBaik"
                                                                           data-val="true"
                                                                           data-val-required="Batas Bawah Baik harus diisi"
                                                                           data-val-range="Batas Bawah Baik harus 0-100"
                                                                           data-val-range-min="0"
                                                                           data-val-range-max="100" />
                                                                    <span class="text-danger" data-valmsg-for="batasBawahBaik" data-valmsg-replace="true"></span>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="batasBawahSangatBaik">Batas Bawah Sangat Baik</label>
                                                                    <input id="batasBawahSangatBaik"
                                                                           name="batasBawahSangatBaik" class="form-control"
                                                                           value="@asesmenSumatif.BatasBawahSangatBaik"
                                                                           data-val="true"
                                                                           data-val-required="Batas Bawah Sangat Baik harus diisi"
                                                                           data-val-range="Batas Bawah Sangat Baik harus 0-100"
                                                                           data-val-range-min="0"
                                                                           data-val-range-max="100" />
                                                                    <span class="text-danger" data-valmsg-for="batasBawahSangatBaik" data-valmsg-replace="true"></span>
                                                                </div>
                                                            </div>

                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                                                                <button type="submit" class="btn btn-primary">Simpan</button>
                                                            </div>
                                                        </form>
                                                    </div>

                                                    <form asp-action="Hapus" asp-controller="AsesmenSumatif" asp-route-id="@asesmenSumatif.Id" asp-route-idJadwalMengajar="@Model.Id" style="display:inline">
                                                        <button type="submit" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Target Capaian TP">
                                                            <i class="fas fa-trash mr-2"></i>Hapus
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function openTambahModal(idJadwal) {
            // URL partial view
            var url = '/Dashboard/Guru/Pertemuan/TambahPartial?idJadwalMengajar=' + idJadwal;

            // Load isi URL ke dalam modal-content
            $("#modalTambahPertemuanContent").load(url, function (response, status, xhr) {
                if (status == "error") {
                    console.error("Gagal load modal:", xhr.status, xhr.statusText);
                } else {
                    // Tampilkan modal setelah konten berhasil dimuat

                    $("form").removeData("validator").removeData("unobtrusiveValidation");
                    $.validator.unobtrusive.parse("form");

                    $("#modalTambahPertemuan").modal("show");
                }
            });h
        }

        $(function() {
            $('.btn-tambah-tp').on('click', function() {
                $('#modalTambahContent').html($('.form-tambah-tp').html());

                $("form").removeData("validator").removeData("unobtrusiveValidation");
                $.validator.unobtrusive.parse("form");

                $('#modalTambah').modal('show');
            });

            $('.form-edit-tp').each(function() {
                const formEdit = $(this);
                $(formEdit).siblings('.btn-edit-tp').on('click', function() {
                    $('#modalEditContent').html($(formEdit).html());

                    $("form").removeData("validator").removeData("unobtrusiveValidation");
                    $.validator.unobtrusive.parse("form");

                    $('#modalEdit').modal('show');
                });
            });
        });
    </script>
}
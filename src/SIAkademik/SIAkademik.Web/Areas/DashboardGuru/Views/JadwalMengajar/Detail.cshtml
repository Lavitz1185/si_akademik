@using SIAkademik.Web.Areas.DashboardGuru.Models.PertemuanModels

@model JadwalMengajar

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="JadwalMengajar" asp-action="Index">Jadwal Mengajar</a></li>
            <li class="breadcrumb-item" aria-current="page">Detail Data</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-warning">
                <div class="d-flex">
                    <div class="col-6 pr-0 pl-0">
                        <div class="card-header" style="padding-top: 20px;">
                            <h4>Daftar Pertemuan</h4>
                        </div>
                        <div class="card-body d-flex">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="table-akun">
                                    <thead>
                                        <tr>
                                            <th>Nomor</th>
                                            <th>Tanggal Pelaksanaan</th>
                                            <th>Status</th>
                                            <th>Keterangan</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pertemuan in Model.DaftarPertemuan.OrderBy(p => p.Nomor))
                                        {
                                            <tr>
                                                <td>@pertemuan.Nomor</td>
                                                <td>
                                                    @if (pertemuan.TanggalPelaksanaan is null)
                                                    {
                                                        <p>Belum Dimulai</p>
                                                    }
                                                    else
                                                    {
                                                        @pertemuan.TanggalPelaksanaan.Value.ToString(CultureInfos.CI.DateTimeFormat.LongDatePattern, CultureInfos.CI)
                                                    }
                                                </td>
                                                <td>@pertemuan.StatusPertemuan.Humanize()</td>
                                                <td>@pertemuan.Keterangan</td>
                                                <td>
                                                    @if (pertemuan.StatusPertemuan == StatusPertemuan.BelumMulai)
                                                    {
                                                        <a asp-action="Mulai" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id">Mulai</a>
                                                    }

                                                    @if (pertemuan.StatusPertemuan == StatusPertemuan.Berjalan)
                                                    {
                                                        <form asp-action="Akhiri" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id">
                                                            <button type="submit">Akhiri</button>
                                                        </form>
                                                    }

                                                    @if (pertemuan.StatusPertemuan != StatusPertemuan.BelumMulai)
                                                    {
                                                        <a asp-action="Absen" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id">Absen</a>
                                                        <a asp-action="Edit" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id">Edit</a>
                                                    }

                                                    <form asp-action="Hapus" asp-controller="Pertemuan" asp-route-id="@pertemuan.Id"  title="Hapus">
                                                        <button type="submit" class="btn btn-danger btn-action swal-confirm">Hapus</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 pr-0 pl-0">

                        <div class="card-header" style="padding-top: 20px;">
                            <h4>Daftar Siswa</h4>
                        </div>
                        <div class="card-body d-flex">

                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="table-akun0">
                                    <thead>
                                        <tr>
                                            <th>NIS</th>
                                            <th>NISN</th>
                                            <th>Nama</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var anggotaRombel in Model.Rombel.DaftarAnggotaRombel)
                                        {
                                            <tr>
                                                <td>@anggotaRombel.Siswa.NIS</td>
                                                <td>@anggotaRombel.Siswa.NISN</td>
                                                <td>@anggotaRombel.Siswa.Nama</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h1>Daftar Pertemuan</h1>

<button type="button" class="btn btn-success" onclick="openTambahModal(@Model.Id)">
    + Tambah Pertemuan
</button>

@section Scripts {
    <script>
        function openTambahModal(idJadwal) {
            // URL partial view
            var url = '/Dashboard/Guru/Pertemuan/TambahPartial?idJadwalMengajar=' + idJadwal;

            // Load isi URL ke dalam modal-content
            $("#modalTambahPertemuanContent").load(url, function (response, status, xhr) {
                if (status == "error") {
                    console.error("Gagal load modal:", xhr.status, xhr.statusText);
                } else {
                    // Tampilkan modal setelah konten berhasil dimuat
                    $("#modalTambahPertemuan").modal("show");
                }
            });
        }
    </script>
}

                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                    
                                </div>
                                <div class="tab-pane fade" id="keempat" role="tabpanel" aria-labelledby="keempat-tab">
                                    @if (Model.DaftarEvaluasiSiswa.Where(e => e.Jenis == JenisNilai.UAS).Count() == 0)

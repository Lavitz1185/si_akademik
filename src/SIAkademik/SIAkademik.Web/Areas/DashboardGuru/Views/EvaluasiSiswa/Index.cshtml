                                    {
                                        <button type="button" class="btn btn-primary btn-tambah mt-2 mb-3">Tambah</button>
                                        <div class="form-tambah" style="display:none">
                                            <form asp-action="Tambah" asp-route-idTahunAjaran="@Model.IdTahunAjaran" asp-route-idJadwalMengajar="@Model.IdJadwalMengajar"
                                                  asp-route-jenis="@JenisNilai.UTS" method="post">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="modalTambah">Tambah Ujian Tengah Semester</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>

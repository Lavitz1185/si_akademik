@using SIAkademik.Web.Areas.DashboardGuru.Models.EvaluasiSiswaModels
@model IsiNilaiVM

<a asp-action="Index" asp-route-idTahunAjaran="@Model.EvaluasiSiswa.JadwalMengajar.Rombel.Kelas.TahunAjaran.Id"
    asp-route-idJadwalMengajar="@Model.EvaluasiSiswa.JadwalMengajar.Id" asp-route-id="@Model.EvaluasiSiswa.Jenis">Kembali</a>

<p>
    Tahun Ajaran : @Model.EvaluasiSiswa.JadwalMengajar.Rombel.Kelas.TahunAjaran.Periode 
    @Model.EvaluasiSiswa.JadwalMengajar.Rombel.Kelas.TahunAjaran.Semester.Humanize() <br />
    Mata Pelajaran : @Model.EvaluasiSiswa.JadwalMengajar.MataPelajaran.Nama <br />
    Kelas : @Model.EvaluasiSiswa.JadwalMengajar.Rombel.Kelas.Jenjang.Humanize() 
    @Model.EvaluasiSiswa.JadwalMengajar.Rombel.Kelas.Peminatan.Nama 
    @Model.EvaluasiSiswa.JadwalMengajar.Rombel.Nama <br />
</p>

<form asp-action="IsiNilai" asp-route-id="@Model.Id">
    <button type="submit">Simpan</button>
    <table>
        <thead>
            <tr>
                <th>Nama</th>
                <th>Nilai</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.DaftarIsiNilaiEntry.Count; i++)
            {
                var entry = Model.DaftarIsiNilaiEntry[i];
                <tr>
                    <input asp-for="@Model.DaftarIsiNilaiEntry[@i].NamaSiswa" hidden readonly/>
                    <input asp-for="@Model.DaftarIsiNilaiEntry[@i].IdAnggotaRombel" hidden readonly/>
                    <td>
                        @entry.NamaSiswa
                    </td>
                    <td>
                        <input asp-for="@Model.DaftarIsiNilaiEntry[@i].Nilai"/>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
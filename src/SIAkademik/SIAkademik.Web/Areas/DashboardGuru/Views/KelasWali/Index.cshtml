@using SIAkademik.Web.Areas.DashboardGuru.Models.KelasWaliModels

@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    ViewData["Title"] = "Kelas Wali";
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Wali Kelas</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="KelasWali" asp-action="Index"></a>Kelas Wali</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Kelas Wali</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <form asp-action="Index" method="get" class="d-flex align-items-center" style="gap: 8px;">
                    <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Tahun Ajaran:</label>
                    <select asp-for="@Model.IdTahunAjaran" class="form-control form-control-sm w-auto submit-on-change">
                        @if (Model.TahunAjaran is null)
                        {
                            <option selected value="@null">-- Pilih Tahun Ajaran --</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    </select>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Kelas</th>
                        <th>Jumlah Siswa</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rombel in Model.DaftarRombelWali)
                    {
                        <tr>
                            <td>@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama  @rombel.Nama</td>
                            <td>@rombel.DaftarAnggotaRombel.Count</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@rombel.Id" class="btn btn-warning" data-toggle="tooltip" title="Detail Kelas Wali"><i class="fas fa-eye"></i> Detail</a>
                                <a asp-action="Absen" asp-route-id="@rombel.Id" class="btn btn-success" data-toggle="tooltip" title="Presensi Kelas Wali"><i class="fas fa-clipboard-check"></i> Presensi</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
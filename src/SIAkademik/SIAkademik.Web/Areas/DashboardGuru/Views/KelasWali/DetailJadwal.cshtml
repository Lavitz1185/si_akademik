@using SIAkademik.Web.Areas.DashboardGuru.Models.KelasWaliModels
@model DetailJadwalVM


<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Wali Kelas</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="KelasWali" asp-action="Index" asp-route-idTahunAjaran="@Model.Rombel.Kelas.TahunAjaran.Id">Kelas Wali</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="KelasWali" asp-action="Detail" asp-route-id="@Model.Rombel.Id">Detail Data</a></li>
            <li class="breadcrumb-item" aria-current="page">Detail Jadwal Kelas Wali</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-primary mb-2">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Jadwal Mengajar</h4>
                </div>
                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Tahun Ajaran</div>
                                <div class="col">@Model.Rombel.Kelas.TahunAjaran.Periode - @Model.Rombel.Kelas.TahunAjaran.Semester.Humanize()</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Kelas</div>
                                <div class="col">@Model.Rombel.Kelas.Jenjang.Humanize() @Model.Rombel.Kelas.Peminatan.Nama @Model.Rombel.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Mata Pelajaran</div>
                                <div class="col">@Model.JadwalMengajar.MataPelajaran.Nama @Model.JadwalMengajar.MataPelajaran.Peminatan.Nama</div>
                            </div>
                        </div>

                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Guru</div>
                                <div class="col">@Model.JadwalMengajar.Pegawai.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Wali Kelas</div>
                                <div class="col">@Model.Rombel.Wali.Nama</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row mb-3" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-info mb-2">
                <div class="card-header" style="padding-top: 20px;">
                    <h4>Pertemuan dan Presensi</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <form asp-action="DetailJadwal" asp-route-id="@Model.Rombel.Id" asp-route-idJadwal="@Model.JadwalMengajar.Id" class="d-flex align-items-center" style="gap: 8px;">
                            <label for="showTidakAktif" class="mb-0" style="font-weight: 600;">Pertemuan:</label>
                            <select id="idPertemuan" name="idPertemuan" class="form-control form-control-sm w-auto">
                                @if (Model.Pertemuan is null)
                                {
                                    <option selected value="">-- Pilih Pertemuan --</option>
                                }

                                @foreach (var pertemuan in Model.JadwalMengajar.DaftarPertemuan.OrderBy(p => p.Nomor))
                                {
                                    @if (Model.Pertemuan == pertemuan)
                                    {
                                        <option selected value="@pertemuan.Id">Pertemuan Ke-@pertemuan.Nomor</option>
                                    }
                                    else
                                    {
                                        <option value="@pertemuan.Id">Pertemuan Ke-@pertemuan.Nomor</option>
                                    }
                                }
                            </select>
                        </form>
                    </div>

                    @if (Model.Pertemuan is not null)
                    {
                        <div class="card-body rounded" style="background-color: #f0f7fd; margin-bottom: 10px;">
                            <div class="row">
                                <!-- Kolom kiri -->
                                <div class="col-md-8">
                                    <div class="row mb-1">
                                        <div class="col-6" style="font-weight:600;">Nomor</div>
                                        <div class="col">@Model.Pertemuan.Nomor</div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-6" style="font-weight:600;">Tanggal Pelaksanaan</div>
                                        <div class="col">@Model.Pertemuan.TanggalPelaksanaan?.ToString("hh:mm dddd, dd MMMM yyyy", CultureInfos.CI)</div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-6" style="font-weight:600;">Keterangan</div>
                                        <div class="col">@Model.Pertemuan.Keterangan</div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-6" style="font-weight:600;">Status</div>
                                        <div class="col">@Model.Pertemuan.StatusPertemuan.Humanize()</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Presensi</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="table-responsive col-12">
                                <table class="table table-striped" id="table-akunn">
                                    <thead>
                                        <tr>
                                            <th>NIS</th>
                                            <th>NISN</th>
                                            <th>Nama</th>
                                            <th>Presensi</th>
                                            <th>Tanggal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Pertemuan is not null)
                                        {
                                            @foreach (var absen in Model.Pertemuan.DaftarAbsen)
                                            {
                                                <tr>
                                                    <td>@absen.AnggotaRombel.Siswa.NIS</td>
                                                    <td>@absen.AnggotaRombel.Siswa.NISN</td>
                                                    <td>@absen.AnggotaRombel.Siswa.Nama</td>
                                                    <td>@absen.Absensi.Humanize()</td>
                                                    <td>@absen.Tanggal.ToString(CultureInfos.CI.DateTimeFormat.LongDatePattern, CultureInfos.CI)</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="justify-content: center;">
    <div class="col-12 col-md-6 col-lg-12">
        <div class="card mb-2">
            <div class="card-header" style="padding-top: 20px;">
                <h4>Nilai</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="table-akun0">
                        <thead>
                            <tr>
                                <th rowspan="3">NIS/NISN</th>
                                <th rowspan="3">Nama</th>
                                <th rowspan="3">Nilai Akhir</th>
                                <th rowspan="3">Nilai Asesmen Sumatif Akhir Semester</th>
                                <th rowspan="3">Rata-rata Nilai Asesmen Sumatif</th>
                                <th colspan="6">Nilai Asesmen Sumatif</th>
                            </tr>
                            <tr>
                                <th rowspan="2">Capaian Kompetensi</th>
                                <th rowspan="2">Nilai</th>
                                <th rowspan="2">Predikat</th>
                                <th colspan="3">Komponen Nilai</th>
                            </tr>
                            <tr>
                                <th>Jenis</th>
                                <th>Deskripsi</th>
                                <th>Nilai</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var anggotaRombel in Model.Rombel.DaftarAnggotaRombel)
                            {
                                var rowspan = Model.JadwalMengajar.DaftarAsesmenSumatif.Count + 2;

                                <tr>
                                    <td rowspan="@rowspan">@anggotaRombel.Siswa.NIS/@anggotaRombel.Siswa.NISN</td>
                                    <td rowspan="@rowspan">@anggotaRombel.Siswa.Nama</td>
                                    <td rowspan="@rowspan">@anggotaRombel.NilaiAkhir(Model.JadwalMengajar)</td>
                                    <td rowspan="@rowspan">@anggotaRombel.DaftarAsesmenSumatifAkhirSemester.FirstOrDefault(a => a.JadwalMengajar == Model.JadwalMengajar)?.Nilai</td>
                                    <td rowspan="@rowspan">@anggotaRombel.RataNilai(Model.JadwalMengajar)</td>
                                </tr>

                                @foreach(var asesmenSumatif in Model.JadwalMengajar.DaftarAsesmenSumatif.OrderBy(a => a.TujuanPembelajaran.Nomor))
                                {
                                    <tr>
                                        <td>@asesmenSumatif.TujuanPembelajaran.Deskripsi</td>
                                        <td>@asesmenSumatif.RataNilai(anggotaRombel)</td>
                                        <td>@asesmenSumatif.Predikat(anggotaRombel)</td>
                                        <td colspan="3" style="padding: 0 !important">
                                            <table>
                                                <tbody>
                                                    @foreach (var evaluasi in asesmenSumatif.DaftarEvaluasiSiswa)
                                                    {
                                                        <tr>
                                                            <td>@evaluasi.Jenis.Humanize()</td>
                                                            <td>@evaluasi.Deskripsi</td>
                                                            <td>@evaluasi.DaftarNilaiEvaluasiSiswa.FirstOrDefault(n => n.AnggotaRombel == anggotaRombel)?.Nilai</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>

                                    @* var rowspan2 = asesmenSumatif.DaftarEvaluasiSiswa.Count + 1;
                                    <tr>
                                        <td rowspan="@rowspan2">@asesmenSumatif.TujuanPembelajaran.Deskripsi</td>
                                        <td rowspan="@rowspan2">@asesmenSumatif.RataNilai(anggotaRombel)</td>
                                        <td rowspan="@rowspan2">@asesmenSumatif.Predikat(anggotaRombel)</td>
                                    </tr>

                                    @foreach (var evaluasi in asesmenSumatif.DaftarEvaluasiSiswa)
                                    {
                                        <tr>
                                            <td>@evaluasi.Jenis.Humanize()</td>
                                            <td>@evaluasi.Deskripsi</td>
                                            <td>@evaluasi.DaftarNilaiEvaluasiSiswa.FirstOrDefault(n => n.AnggotaRombel == anggotaRombel)?.Nilai</td>
                                        </tr>
                                    } *@
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('select#idPertemuan').on('change', function() {
                $(this).closest('form').trigger('submit')
            })
        })
    </script>
}
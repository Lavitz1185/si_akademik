@using SIAkademik.Web.Areas.DashboardGuru.Models.AsesmenSumatifModels
@model DetailVM

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item">
                <a asp-area="@AreaNames.DashboardGuru" asp-controller="AsesmenSumatif" asp-action="Index"
                   asp-route-idTahunAjaran="@Model.AsesmenSumatif.JadwalMengajar.Rombel.Kelas.TahunAjaran.Id"
                   asp-route-idJadwalMengajar="@Model.AsesmenSumatif.IdJadwalMengajar"
                   asp-route-idAsesmenSumatif="@Model.AsesmenSumatif.Id">
                    Asesmen Sumatif
                </a>
            </li>
            <li class="breadcrumb-item" aria-current="page">Detail</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-primary mb-2">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>@Model.EvaluasiSiswa.Jenis.Humanize()</h4>
                </div>
                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Tahun Ajaran</div>
                                <div class="col">@Model.AsesmenSumatif.JadwalMengajar.Rombel.Kelas.TahunAjaran.Periode - @Model.AsesmenSumatif.JadwalMengajar.Rombel.Kelas.TahunAjaran.Semester.Humanize()</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Kelas</div>
                                <div class="col">@Model.AsesmenSumatif.JadwalMengajar.Rombel.Kelas.Jenjang.Humanize() @Model.AsesmenSumatif.JadwalMengajar.Rombel.Kelas.Peminatan.Nama @Model.AsesmenSumatif.JadwalMengajar.Rombel.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-4" style="font-weight:600;">Mata Pelajaran</div>
                                <div class="col">@Model.AsesmenSumatif.JadwalMengajar.MataPelajaran.Nama @Model.AsesmenSumatif.JadwalMengajar.MataPelajaran.Peminatan.Nama</div>
                            </div>
                        </div>

                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Guru</div>
                                <div class="col">@Model.AsesmenSumatif.JadwalMengajar.Pegawai.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Wali Kelas</div>
                                <div class="col">@Model.AsesmenSumatif.JadwalMengajar.Rombel.Wali.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Deskripsi</div>
                                <div class="col">@Model.EvaluasiSiswa.Deskripsi</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-12">
                            <div class="row mb-1">
                                <div class="col-2" style="font-weight:600;">Capaian Target CP</div>
                                <div class="col">@Model.AsesmenSumatif.TujuanPembelajaran.Nomor). @Model.AsesmenSumatif.TujuanPembelajaran.Deskripsi</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-info">
                <div class="card-header" style="padding-top: 20px;">
                    <h4>Informasi Detail Jadwal Mengajar</h4>
                </div>

                <div class="card-body mt-3">
                    <form asp-action="SimpanNilai" asp-route-idEvaluasiSiswa="@Model.IdEvaluasiSiswa" method="post">
                        <div class="mb-3 mt-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Simpan
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="table-akun">
                                <thead>
                                    <tr>
                                        <th>Nama</th>
                                        <th>Nilai</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for(int i = 0; i < Model.DaftarDetailEntryVM.Count; i++)
                                    {
                                        <tr>
                                            <input asp-for="@Model.DaftarDetailEntryVM[@i].IdAnggotaRombel" hidden readonly/>
                                            <td>@Model.DaftarDetailEntryVM[@i].Nama</td>
                                            <td>
                                                <input asp-for="@Model.DaftarDetailEntryVM[@i].Nilai" class="form-control"/>
                                                <span asp-validation-for="@Model.DaftarDetailEntryVM[@i].Nilai" class="text-danger"></span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
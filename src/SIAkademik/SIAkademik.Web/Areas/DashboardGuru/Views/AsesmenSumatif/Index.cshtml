@using SIAkademik.Web.Areas.DashboardGuru.Models.AsesmenSumatifModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="AsesmenSumatif" asp-action="Index"></a>Asesmen Sumatif</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Asesmen Sumatif</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start mb-3">
            <form method="get" class="row" style="gap: 8px;">
                <div class="col-12 mb-1">
                    <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Tahun Ajaran:</label>
                    <select asp-for="@Model.IdTahunAjaran" class="submit-on-change form-control form-control-sm w-auto">
                        @if (Model.TahunAjaran is null)
                        {
                            <option value="@null">-- Pilih Tahun Ajaran --</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    </select>

                    <label asp-for="@Model.IdJadwalMengajar" class="mb-0" style="font-weight: 600;">Jadwal Mengajar:</label>
                    <select asp-for="@Model.IdJadwalMengajar" class="submit-on-change form-control form-control-sm w-auto">
                        @if (Model.IdJadwalMengajar is null)
                        {
                            <option value="@null">-- Pilih Jadwal Mengajar --</option>
                        }

                        @if (Model.TahunAjaran is not null)
                        {
                            @foreach (var jadwal in Model.Pegawai.DaftarJadwalMengajar.Where(j => j.Rombel.Kelas.TahunAjaran == Model.TahunAjaran))
                            {
                                <option value="@jadwal.Id">@jadwal.MataPelajaran.Nama @jadwal.Rombel.Kelas.Jenjang.Humanize() @jadwal.Rombel.Kelas.Peminatan.Nama @jadwal.Rombel.Nama</option>
                            }
                        }
                    </select>

                    <label asp-for="@Model.IdAsesmenSumatif" class="mb-0" style="font-weight: 600;">Target Capaian TP:</label>
                    <select asp-for="@Model.IdAsesmenSumatif" class="submit-on-change form-control form-control-sm w-auto">
                        @if (Model.IdAsesmenSumatif is null)
                        {
                            <option value="@null">-- Pilih Target Capaian TP --</option>
                        }

                        @if (Model.JadwalMengajar is not null)
                        {
                            @foreach (var asesmen in Model.JadwalMengajar.DaftarAsesmenSumatif.OrderBy(a => a.TujuanPembelajaran.Nomor))
                            {
                                <option value="@asesmen.Id">@asesmen.TujuanPembelajaran.Nomor). @asesmen.TujuanPembelajaran.Deskripsi</option>
                            }
                        }
                    </select>
                </div>
            </form>
        </div>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#pertama" role="tab"
                   aria-controls="home" aria-selected="true">Tugas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#kedua" role="tab"
                   aria-controls="profile" aria-selected="false">Ulangan Harian</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#ketiga" role="tab"
                   aria-controls="profile" aria-selected="false">Daftar Siswa</a>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="pertama" role="tabpanel" aria-labelledby="home-tab">
                <div class="mb-3 mt-2">
                    <button type="button" class="btn-tambah btn btn-primary">
                        + Tambah
                    </button>
                    @if (Model.AsesmenSumatif is not null)
                    {
                        <div class="form-tambah" style="display:none">
                            @{
                                var modelTambah = new SIAkademik.Web.Areas.DashboardGuru.Models.EvaluasiSiswaModels.TambahVM
                                {
                                    IdAsesmenSumatif = Model.AsesmenSumatif.Id,
                                    Jenis = JenisNilai.Tugas
                                };
                            }
                            <partial name="~/Areas/DashboardGuru/Views/EvaluasiSiswa/_FormTambahPartial.cshtml" model="@modelTambah" />
                        </div>
                    }
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="table-akun">
                        <thead>
                            <tr>
                                <th>Deskripsi</th>
                                <th>Rata-rata Nilai</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AsesmenSumatif is not null)
                            {
                                @foreach (var evaluasiSiswa in Model.AsesmenSumatif.DaftarEvaluasiSiswa.Where(e => e.Jenis == JenisNilai.Tugas))
                                {
                                    <tr>
                                        <td>@evaluasiSiswa.Deskripsi</td>
                                        <td>
                                            @if (evaluasiSiswa.DaftarNilaiEvaluasiSiswa.Count > 0)
                                            {
                                                @(evaluasiSiswa.DaftarNilaiEvaluasiSiswa.Average(n => n.Nilai))
                                            }
                                            else
                                            {
                                                @("Nilai Belum Diisi")
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-idEvaluasiSiswa="@evaluasiSiswa.Id" class="btn btn-warning" data-toggle="tooltip" title="Detail Tugas">
                                                <i class="fas fa-eye mr-2"></i>Detail
                                            </a>
                                            <button class="btn btn-primary btn-edit" data-toggle="tooltip" title="Edit Tugas">
                                                <i class="fas fa-pencil-alt mr-2"></i>Edit
                                            </button>
                                            <div class="form-edit" style="display:none">
                                                @{
                                                    var modelEdit = new SIAkademik.Web.Areas.DashboardGuru.Models.EvaluasiSiswaModels.EditVM
                                                    {
                                                        Id = evaluasiSiswa.Id,
                                                        Jenis = evaluasiSiswa.Jenis,
                                                        Deskripsi = evaluasiSiswa.Deskripsi
                                                    };
                                                }
                                                <partial name="~/Areas/DashboardGuru/Views/EvaluasiSiswa/_FormEditPartial.cshtml" model="@modelEdit" />
                                            </div>
                                            <form asp-action="Hapus" asp-controller="EvaluasiSiswa" asp-route-id="@evaluasiSiswa.Id" style="display:inline">
                                                <button type="submit" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Tugas">
                                                    <i class="fas fa-trash mr-2"></i>Hapus
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="kedua" role="tabpanel" aria-labelledby="profile-tab">
                <div class="mb-3 mt-2">
                    <button type="button" class="btn btn-primary btn-tambah">
                        + Tambah
                    </button>
                    @if (Model.AsesmenSumatif is not null)
                    {
                        <div class="form-tambah" style="display:none">
                            @{
                                var modelTambah = new SIAkademik.Web.Areas.DashboardGuru.Models.EvaluasiSiswaModels.TambahVM
                                {
                                    IdAsesmenSumatif = Model.AsesmenSumatif.Id,
                                    Jenis = JenisNilai.UlanganHarian
                                };
                            }
                            <partial name="/Areas/DashboardGuru/Views/EvaluasiSiswa/_FormTambahPartial.cshtml" model="@modelTambah" />
                        </div>
                    }
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="table-akun">
                        <thead>
                            <tr>
                                <th>Deskripsi</th>
                                <th>Rata-rata Nilai</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AsesmenSumatif is not null)
                            {
                                @foreach (var evaluasiSiswa in Model.AsesmenSumatif.DaftarEvaluasiSiswa.Where(e => e.Jenis == JenisNilai.UlanganHarian))
                                {
                                    <tr>
                                        <td>@evaluasiSiswa.Deskripsi</td>
                                        <td>
                                            @if (evaluasiSiswa.DaftarNilaiEvaluasiSiswa.Count > 0)
                                            {
                                                @(evaluasiSiswa.DaftarNilaiEvaluasiSiswa.Average(n => n.Nilai))
                                            }
                                            else
                                            {
                                                @("Nilai Belum Diisi")
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-idEvaluasiSiswa="@evaluasiSiswa.Id" class="btn btn-warning" data-toggle="tooltip" title="Detail Tugas">
                                                <i class="fas fa-eye mr-2"></i>Detail
                                            </a>
                                            <button class="btn btn-primary btn-edit" data-toggle="tooltip" title="Edit Ulangan Harian">
                                                <i class="fas fa-pencil-alt mr-2"></i>Edit
                                            </button>
                                            <div class="form-edit" style="display:none">
                                                @{
                                                    var modelEdit = new SIAkademik.Web.Areas.DashboardGuru.Models.EvaluasiSiswaModels.EditVM
                                                    {
                                                        Id = evaluasiSiswa.Id,
                                                        Jenis = evaluasiSiswa.Jenis,
                                                        Deskripsi = evaluasiSiswa.Deskripsi
                                                    };
                                                }
                                                <partial name="/Areas/DashboardGuru/Views/EvaluasiSiswa/_FormEditPartial.cshtml" model="@modelEdit" />
                                            </div>
                                            <form asp-action="Hapus" asp-controller="EvaluasiSiswa" asp-route-id="@evaluasiSiswa.Id" style="display:inline">
                                                <button type="submit" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Ulangan Harian">
                                                    <i class="fas fa-trash mr-2"></i>Hapus
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="ketiga" role="tabpanel" aria-labelledby="profile-tab">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="table-akun">
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>Rata-rata Nilai</th>
                                <th>Predikat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model.JadwalMengajar is not null && Model.AsesmenSumatif is not null)
                            {
                                @foreach (var anggotaRombel in Model.JadwalMengajar.Rombel.DaftarAnggotaRombel)
                                {
                                    <tr>
                                        <td>@anggotaRombel.Siswa.Nama</td>
                                        <td>@Model.AsesmenSumatif.RataNilai(anggotaRombel)</td>
                                        <td>@Model.AsesmenSumatif.Predikat(anggotaRombel)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
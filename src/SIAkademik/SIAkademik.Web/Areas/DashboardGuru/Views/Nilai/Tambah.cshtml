@using SIAkademik.Web.Areas.DashboardGuru.Models.NilaiModels
@model TambahVM

<form asp-action="Tambah" method="post" class="container">
    <div asp-validation-summary="ModelOnly"></div>

    <input asp-for="@Model.IdSiswa" readonly hidden/>
    <input asp-for="@Model.IdJadwalMengajar" readonly hidden/>

    <div class="row">
        <label asp-for="@Model.Deskripsi"></label>
        <input asp-for="@Model.Deskripsi" />
        <span asp-validation-for="@Model.Deskripsi"></span>
    </div>

    <input asp-for="@Model.Jenis" readonly hidden/>

    <div class="row">
        <label asp-for="@Model.Skor"></label>
        <input asp-for="@Model.Skor" />
        <span asp-validation-for="@Model.Skor"></span>
    </div>

    <button type="submit">Simpan</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
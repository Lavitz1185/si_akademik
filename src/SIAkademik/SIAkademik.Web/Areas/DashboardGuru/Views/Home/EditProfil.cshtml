@using SIAkademik.Web.Areas.DashboardGuru.Models.Home
@model EditProfilVM

@inject ISignInManager SignInManager

@{
    var pegawai = (await SignInManager.GetPegawai())!;
}

<form asp-action="EditProfil">
    <div class="section-body">
        <div class="row" style="justify-content: center;">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card card-primary mt-3">
                    <div class="card-header border-bottom pb-3">
                        <h4>Profil Pegawai</h4>
                        <div class="ml-auto">
                            <button type="submit" asp-action="EditProfil" class="btn btn-primary"><i class="fas fa-pencil-alt"></i><span class="pl-2">Simpan</span></button>
                            <a asp-action="Profil" class="btn btn-warning"><i class="fas fa-pencil-alt"></i><span class="pl-2">Batal</span></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                @if (pegawai.FotoProfil is not null)
                                {
                                    <img src="@pegawai.FotoProfil?.OriginalString" alt="foto profil" />
                                }
                            </div>
                            <div class="col-10">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="row mb-3 border-bottom pb-1">
                                            <div class="col-md-5" style="font-weight:600;">NIP</div>
                                            <div class="col-md-7">@pegawai.Id</div>
                                        </div>
                                        <div class="row mb-3 border-bottom pb-1">
                                            <div class="col-md-5" style="font-weight:600;">Tanggal Masuk</div>
                                            <div class="col-md-7">@pegawai.TanggalMasuk.ToString("dd MMMM yyyy", CultureInfos.CI)</div>
                                        </div>
                                        <div class="row mb-3 border-bottom pb-1">
                                            <div class="col-md-5" style="font-weight:600;">Jabatan</div>
                                            <div class="col-md-7">@pegawai.Jabatan.Nama - @pegawai.Jabatan.Jenis.Humanize()</div>
                                        </div>
                                        <div class="row mb-3 border-bottom pb-1">
                                            <div class="col-md-5" style="font-weight:600;">Divisi</div>
                                            <div class="col-md-7">@pegawai.Divisi.Nama</div>
                                        </div>
                                    </div>
                                </div>

                                <div asp-validation-summary="All"></div>

                                @* Ini Desain Tab *@
                                <ul class="nav nav-tabs pt-2" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                           aria-controls="home" aria-selected="true">Data Diri</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="kedua-tab" data-toggle="tab" href="#kedua" role="tab"
                                           aria-controls="kedua" aria-selected="false">Alamat</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active pt-0" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="row border pt-2">
                                            <div class="col-6">
                                                <div class="row">
                                                    <div class="col-12 pb-3">
                                                        <div class="card-header border-bottom pl-0" style="border-bottom: 2px solid #6777ef !important;">
                                                            <h4 style="color: #6777ef">Umum</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Nama"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Nama" class="form-control"/>
                                                        <span asp-validation-for="@Model.Nama"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.NIK"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.NIK" class="form-control" />
                                                        <span asp-validation-for="@Model.NIK"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.JenisKelamin"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <select asp-for="@Model.JenisKelamin" class="form-control">
                                                            @foreach (var jenisKelamin in Enum.GetValues<JenisKelamin>())
                                                            {
                                                                <option value="@jenisKelamin">@jenisKelamin.Humanize()</option>
                                                            }
                                                        </select>
                                                        <span asp-validation-for="@Model.JenisKelamin"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.TempatLahir"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.TempatLahir" class="form-control" />
                                                        <span asp-validation-for="@Model.TempatLahir"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.TanggalLahir"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.TanggalLahir" type="date" class="form-control" />
                                                        <span asp-validation-for="@Model.TanggalLahir"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.StatusPerkawinan"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <select asp-for="@Model.StatusPerkawinan" class="form-control">
                                                            @foreach (var statusKawin in Enum.GetValues<StatusPerkawinan>())
                                                            {
                                                                <option value="@statusKawin">@statusKawin.Humanize()</option>
                                                            }
                                                        </select>
                                                        <span asp-validation-for="@Model.StatusPerkawinan"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.GolonganDarah"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <select asp-for="@Model.GolonganDarah" class="form-control">
                                                            @foreach (var golonganDarah in Enum.GetValues<GolonganDarah>())
                                                            {
                                                                <option value="@golonganDarah">@golonganDarah.Humanize()</option>
                                                            }
                                                        </select>
                                                        <span asp-validation-for="@Model.GolonganDarah"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.NoRekening"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.NoRekening" class="form-control" />
                                                        <span asp-validation-for="@Model.NoRekening"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="row">
                                                    <div class="col-12 pb-3">
                                                        <div class="card-header border-bottom pl-0" style="border-bottom: 2px solid #6777ef !important;">
                                                            <h4 style="color: #6777ef">Kontak</h4>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.NoHP"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.NoHP" class="form-control" />
                                                        <span asp-validation-for="@Model.NoHP"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Email"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Email" class="form-control" />
                                                        <span asp-validation-for="@Model.Email"></span>
                                                    </div>
                                                </div>
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.NamaInstagram"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.NamaInstagram" class="form-control" />
                                                        <span asp-validation-for="@Model.NamaInstagram"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane fade pt-0" id="kedua" role="tabpanel" aria-labelledby="kedua-tab">
                                        <div class="row border pt-2">
                                            <div class="col-6">
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.KodePos"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Alamat.KodePos" class="form-control" />
                                                        <span asp-validation-for="@Model.Alamat.KodePos"></span>
                                                    </div>
                                                </div>

                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.Jalan"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Alamat.Jalan" class="form-control" />
                                                        <span asp-validation-for="@Model.Alamat.Jalan"></span>
                                                    </div>
                                                </div>

                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.RT">RT/RW</label>
                                                    </div>
                                                    <div class="d-flex col-md-7 justify-content-center align-items-center">
                                                        <div>
                                                            <input asp-for="@Model.Alamat.RT" class="form-control" />
                                                            <span asp-validation-for="@Model.Alamat.RT"></span>
                                                        </div>
                                                        <div class="mx-2">
                                                            <p style="font-size: 20px;" class="mb-0">/</p>
                                                        </div>
                                                        <div>
                                                            <input asp-for="@Model.Alamat.RW" class="form-control" />
                                                            <span asp-validation-for="@Model.Alamat.RW"></span>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row mb-3 pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.KelurahanDesa"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Alamat.KelurahanDesa" class="form-control" />
                                                        <span asp-validation-for="@Model.Alamat.KelurahanDesa"></span>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="col-6">
                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.Kecamatan"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Alamat.Kecamatan" class="form-control" />
                                                        <span asp-validation-for="@Model.Alamat.Kecamatan"></span>
                                                    </div>
                                                </div>

                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.KotaKabupaten"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Alamat.KotaKabupaten" class="form-control" />
                                                        <span asp-validation-for="@Model.Alamat.KotaKabupaten"></span>
                                                    </div>
                                                </div>

                                                <div class="row mb-3 border-bottom pb-1">
                                                    <div class="col-md-5" style="font-weight:600;">
                                                        <label asp-for="@Model.Alamat.Provinsi"></label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input asp-for="@Model.Alamat.Provinsi" class="form-control" />
                                                        <span asp-validation-for="@Model.Alamat.Provinsi"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model Pegawai

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12" >
            <div class="card card-primary mt-3">
                <div class="card-header border-bottom pb-3">
                    <h4>Profil Pegawai</h4>
                    <div class="ml-auto">
                        <a asp-action="EditProfil" class="btn btn-warning"><i class="fas fa-pencil-alt"></i><span class="pl-2">Edit Profil</span></a>
                        <a asp-action="UbahPassword" class="btn btn-primary" data-toggle="tooltip" title="Ubah Password"><i class="fas fa-pencil-alt"></i><span class="pl-2">Ubah Password</span></a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-2 border-right text-center">
                            <div id="foto-container" class="d-flex justify-content-center">
                                @if (Model.FotoProfil is not null)
                                {
                                    <img id="foto-profil" src="@Model.FotoProfil.OriginalString" alt="Foto Profil" style="width: 100%;" />
                                }
                                else
                                {
                                    var inisial = string.Join("", Model.Nama.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                    .Select(n => n[0]))
                                    .ToUpperInvariant();
                                    if (inisial.Length > 2) inisial = inisial.Substring(0, 2);

                                    <div class="fotoprofil">
                                        @inisial
                                    </div>
                                }
                            </div>

                            <button id="btn-ganti-foto" type="button" class="btn btn-secondary mt-2" data-toggle="tooltip" title="Ganti Foto Profil">Ganti Foto Profil</button>

                            <input type="file" id="input-foto" accept=".jpg,.jpeg" style="display:none" />
                        </div>

                        <div class="col-10">
                            <div class="row">
                                <div class="col-6">
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">NIP</div>
                                        <div class="col-md-7">@Model.Id</div>
                                    </div>
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Nama Lengkap</div>
                                        <div class="col-md-7">@Model.Nama</div>
                                    </div>
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Jenis Kelamin</div>
                                        <div class="col-md-7">@Model.JenisKelamin</div>
                                    </div>
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Tempat / Tanggal Lahir</div>
                                        <div class="col-md-7">@Model.TempatLahir / @Model.TanggalLahir</div>
                                    </div>
                                </div>

                                <div class="col-6">                                   
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Tanggal Masuk</div>
                                        <div class="col-md-7">@Model.TanggalMasuk.ToString("dd MMMM yyyy", CultureInfos.CI)</div>
                                    </div>
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Jabatan</div>
                                        <div class="col-md-7">@Model.Jabatan.Nama - @Model.Jabatan.Jenis.Humanize()</div>
                                    </div>
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Divisi</div>
                                        <div class="col-md-7">@Model.Divisi.Nama</div>
                                    </div>
                                    <div class="row mb-3 border-bottom pb-1">
                                        <div class="col-md-5" style="font-weight:600;">Agama</div>
                                        <div class="col-md-7">@Model.Agama</div>
                                    </div>
                                </div>
                            </div>

                            @* Ini Desain Tab *@
                            <ul class="nav nav-tabs pt-2" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                       aria-controls="home" aria-selected="true">Data Diri</a>
                                </li>                               
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active pt-0" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="row border pt-2">
                                        <div class="col-6">
                                            <div class="row">
                                                <div class="col-12 pb-3">
                                                    <div class="card-header border-bottom pl-0" style="border-bottom: 2px solid #6777ef !important;">
                                                        <h4 style="color: #6777ef">Umum</h4>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">NIK</div>
                                                <div class="col-md-7">@Model.NIK</div>      
                                            </div>
                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Status Perkawinan</div>
                                                <div class="col-md-7">@Model.StatusPerkawinan.Humanize()</div>
                                            </div>
                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Golongan Darah</div>
                                                <div class="col-md-7">@Model.GolonganDarah.Humanize()</div>
                                            </div>
                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">No. Rekening</div>
                                                <div class="col-md-7">@Model.NoRekening</div>
                                            </div>

                                            <div class="row">
                                                <div class="col-12 pb-3">
                                                    <div class="card-header border-bottom pl-0" style="border-bottom: 2px solid #6777ef !important;">
                                                        <h4 style="color: #6777ef">Kontak</h4>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">No. HP/WA</div>
                                                <div class="col-md-7">@Model.NoHP.Value</div>
                                            </div>
                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Email</div>
                                                <div class="col-md-7">@Model.Email</div>
                                            </div>
                                            <div class="row mb-3 pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Nama Instagram</div>
                                                <div class="col-md-7">@Model.NamaInstagram</div>
                                            </div>

                                        </div>

                                        <div class="col-6">                                           

                                            <div class="row">
                                                <div class="col-12 pb-3">
                                                    <div class="card-header border-bottom pl-0" style="border-bottom: 2px solid #6777ef !important;">
                                                        <h4 style="color: #6777ef">Alamat</h4>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Jalan</div>
                                                <div class="col-md-7"> @Model.AlamatKTP.Jalan</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">RT</div>
                                                <div class="col-md-7">@Model.AlamatKTP.RT</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">RW</div>
                                                <div class="col-md-7">@Model.AlamatKTP.RW</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Kelurahan / Desa</div>
                                                <div class="col-md-7"> @Model.AlamatKTP.KelurahanDesa</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Kecamatan</div>
                                                <div class="col-md-7"> @Model.AlamatKTP.Kecamatan</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Kabupaten / Kota</div>
                                                <div class="col-md-7">@Model.AlamatKTP.KotaKabupaten</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Provinsi</div>
                                                <div class="col-md-7"> @Model.AlamatKTP.Provinsi</div>
                                            </div>

                                            <div class="row mb-3 border-bottom pb-1">
                                                <div class="col-md-5" style="font-weight:600;">Kode Pos</div>
                                                <div class="col-md-7">@Model.AlamatKTP.KodePos</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>                                
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ketika tombol diklik, buka file picker
            $('#btn-ganti-foto').on('click', function () {
                $('#input-foto').click();
            });

            // ketika user memilih file
            $('#input-foto').on('change', function () {
                var file = this.files[0];
                if (!file) return;

                // validasi ukuran & tipe file
                if (!['image/jpeg', 'image/jpg'].includes(file.type)) {
                    alert('Hanya file .jpg atau .jpeg yang diperbolehkan.');
                    return;
                }
                if (file.size > 100 * 1024) {
                    alert('Ukuran file maksimal 100 KB.');
                    return;
                }

                var formData = new FormData();
                formData.append('FotoProfil', file);

                // tampilkan indikator loading
                $('#btn-ganti-foto').prop('disabled', true).text('Mengunggah...');
                +
                    $.ajax({
                        url: '@Url.Action("EditFotoProfil", "Home", new { area = "DashboardSiswa" })',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (res) {
                            // misalnya controller mengembalikan URL foto baru
                            if (res && res.newFotoUrl) {
                                $('#foto-profil').attr('src', res.newFotoUrl);
                            }
                            // reload halaman
                            setTimeout(function () {
                                location.reload();
                            });
                        },
                        error: function () {
                            // alert('Gagal mengganti foto profil.');
                        },
                        complete: function () {
                            $('#btn-ganti-foto').prop('disabled', false).text('Ganti Foto Profil');
                        }
                    });
            });
        });        
    </script>
}

@using SIAkademik.Web.Areas.DashboardGuru.Models.Import
@model NilaiSASVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    ViewData["Title"] = "Import Nilai SAS";
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="Import" asp-action="NilaiSAS"></a>Import Nilai SAS</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Import Nilai Sumatif Akhir Semester</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start mb-3">
            <form method="get" class="row g-2 align-items-end">
                <!-- Tahun Ajaran -->
                <div class="col-12 col-md-4 mb-3">
                    <label asp-for="@Model.IdTahunAjaran" class="form-label fw-semibold mb-1">Tahun Ajaran:</label>
                    <select asp-for="@Model.IdTahunAjaran" class="submit-on-change form-control form-control-sm">
                        @if (Model.TahunAjaran is null)
                        {
                            <option value="@null">-- Pilih Tahun Ajaran --</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    </select>
                </div>

                <!-- Jadwal Mengajar -->
                <div class="col-12 col-md-4 mb-3">
                    <label asp-for="@Model.IdJadwalMengajar" class="form-label fw-semibold mb-1">Jadwal Mengajar:</label>
                    <select asp-for="@Model.IdJadwalMengajar" class="submit-on-change form-control form-control-sm">
                        @if (Model.IdJadwalMengajar is null)
                        {
                            <option value="@null">-- Pilih Jadwal Mengajar --</option>
                        }

                        @if (Model.TahunAjaran is not null)
                        {
                            @foreach (var jadwal in Model.Pegawai.DaftarJadwalMengajar.Where(j => j.Rombel.TahunAjaran == Model.TahunAjaran))
                            {
                                <option value="@jadwal.Id">@jadwal.MataPelajaran.Nama @jadwal.Rombel.Kelas.Jenjang.Humanize() @jadwal.Rombel.Kelas.Peminatan.Nama @jadwal.Rombel.Nama</option>
                            }
                        }
                    </select>
                </div>
            </form>
        </div>

        @if (Model.JadwalMengajar is not null)
        {
            <a class="btn btn-icon icon-left btn-success"
               asp-action="DownloadFormatNilaiSAS" 
               asp-route-idJadwalMengajar="@Model.JadwalMengajar.Id"
               target="_blank">
               Download Template
            </a>
            <form 
                asp-action="NilaiSAS" 
                asp-route-idTahunAjaran="@Model.IdTahunAjaran"
                asp-route-idJadwalMengajar="@Model.IdJadwalMengajar"
                enctype="multipart/form-data" class="text-center w-100">

                <!-- Kotak dashed -->
                <label for="fileInput"
                       class="border border-2 border-secondary-subtle rounded-3 bg-white d-flex flex-column align-items-center justify-content-center w-100"
                       style="height: 200px; border-style: dashed !important; cursor: pointer;">
                    <i class="fas fa-file-excel text-success mb-2" style="font-size: 2.5rem;"></i>
                    <p class="text-muted file-name">Pilih file excel (.xlsx)</p>
                </label>

                <!-- Input file tersembunyi -->
                <input asp-for="@Model.FormFile" id="fileInput" class="import-file-input d-none" type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
                <span asp-validation-for="@Model.FormFile" class="text-danger d-block mt-2"></span>

                <!-- Tombol upload di luar kotak -->
                <button type="submit" class="btn btn-primary mt-4">Upload</button>
            </form>
        }

        @if(Model.FileName is not null && Model.JadwalMengajar is not null)
        {
            <hr />
            <h4>Nilai yang diimport</h4>
            <b>Nama File : @Model.FileName</b>
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="table-akun">
                    <thead>
                        <tr>
                            <th>Nomor</th>
                            <th>Nama</th>
                            <th>NIS</th>
                            <th>NISN</th>
                            <th>Nilai Sumatif Akhir Semester</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for(int i = 0; i < Model.NewData.Count; i++)
                        {
                            var asesmenAkhirSemester = Model.NewData[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@asesmenAkhirSemester.AnggotaRombel.Siswa.Nama</td>
                                <td>@asesmenAkhirSemester.AnggotaRombel.Siswa.NIS</td>
                                <td>@asesmenAkhirSemester.AnggotaRombel.Siswa.NISN</td>
                                <td>@asesmenAkhirSemester.Nilai</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
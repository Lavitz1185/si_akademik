@using SIAkademik.Web.Areas.DashboardGuru.Models.RaportModels
@using SIAkademik.Web.Authentication
@model CetakVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IRombelRepository RombelRepository

@{
    ViewData["Title"] = "Cetak Raport";
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Wali Kelas</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="Cetak" asp-action="NilaiEkstrakulikuler">Cetak</a></li>
        </ol>
    </nav>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Rapor</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3 align-items-center">
            <form asp-action="Cetak" method="get" class="d-flex">
                <div class="d-flex align-items-center mr-3" style="gap: 8px;">
                    <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Tahun Ajaran:</label>
                    <select asp-for="@Model.IdTahunAjaran" name="idTahunAjaran" class="form-control w-auto submit-on-change">
                        @if (Model.TahunAjaran is null)
                        {
                            <option value="@null">-- Pilih Tahun Ajaran --</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    </select>
                </div>

                <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                    <label asp-for="@Model.IdRombel" class="mb-0" style="font-weight: 600;">Kelas:</label>
                    <select asp-for="@Model.IdRombel" class="form-control w-auto submit-on-change">
                        @if (Model.Rombel is null)
                        {
                            <option value="@null">-- Pilih Kelas --</option>
                        }

                        @if (Model.TahunAjaran is not null)
                        {
                            var daftarRombel = await RombelRepository.GetAllByTahunAjaran(Model.TahunAjaran.Id);

                            @foreach (var rombel in daftarRombel.Where(r => r.Wali == Model.Pegawai))
                            {
                                <option value="@rombel.Id">@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama @rombel.Nama</option>
                            }
                        }
                    </select>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>NIS/NISN</th>
                        <th>Nama</th>
                        <th>Aksi</th>
                </thead>
                <tbody>
                    @if (Model.TahunAjaran is not null && Model.Rombel is not null)
                    {
                        @foreach (var anggota in Model.Rombel.DaftarAnggotaRombel)
                        {
                            <tr>
                                <td>@anggota.Siswa.NIS/@anggota.Siswa.NISN</td>
                                <td>@anggota.Siswa.Nama</td>
                                <td>
                                    <a asp-action="DetailCetak" asp-route-idSiswa="@anggota.Siswa.Id" asp-route-idRombel="@anggota.Rombel.Id" class="btn btn-warning" data-toggle="tooltip" title="Cetak">
                                        <i class="fas fa-eye"></i> Cetak
                                    </a>
                                    <a asp-action="RaportPDF" asp-route-idSiswa="@anggota.Siswa.Id" asp-route-idRombel="@anggota.Rombel.Id" 
                                        asp-route-download="@true" target="_blank" class="btn btn-primary" data-toggle="tooltip" title="Download">
                                        <i class="fas fa-eye"></i> Download
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@using SIAkademik.Web.Areas.DashboardGuru.Models.RaportModels
@using SIAkademik.Web.Authentication
@model NilaiEkstrakulikulerVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IRombelRepository RombelRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Wali Kelas</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardGuru" asp-controller="Raport" asp-action="NilaiEkstrakulikuler">Nilai Ekstrakurikuler</a></li>
        </ol>
    </nav>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Rapor</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3 align-items-center">

            <form asp-action="NilaiEkstrakulikuler" method="get" class="d-flex">
                <div class="d-flex align-items-center mr-3" style="gap: 8px;">
                    <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Tahun Ajaran:</label>
                    <select asp-for="@Model.IdTahunAjaran" name="idTahunAjaran" class="form-control w-auto submit-on-change">
                        @if (Model.TahunAjaran is null)
                        {
                            <option value="@null">-- Pilih Tahun Ajaran --</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    </select>
                </div>

                <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                    <label asp-for="@Model.IdRombel" class="mb-0" style="font-weight: 600;">Kelas:</label>
                    <select asp-for="@Model.IdRombel" class="form-control w-auto submit-on-change">
                        @if (Model.Rombel is null)
                        {
                            <option value="@null">-- Pilih Kelas --</option>
                        }

                        @if (Model.TahunAjaran is not null)
                        {
                            var daftarRombel = await RombelRepository.GetAllByTahunAjaran(Model.TahunAjaran.Id);

                            @foreach (var rombel in daftarRombel.Where(r => r.Wali == Model.Pegawai))
                            {
                                <option value="@rombel.Id">@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama @rombel.Nama</option>
                            }
                        }
                    </select>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th rowspan="2">NIS/NISN</th>
                        <th rowspan="2">Nama</th>
                        <th rowspan="2">Aksi</th>
                        <th colspan="4">Ekstrakurikuler</th>
                    </tr>
                    <tr>
                        <th>Nama</th>
                        <th>Predikat</th>
                        <th>Keterangan</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.TahunAjaran is not null && Model.Rombel is not null)
                    {
                        @foreach (var anggota in Model.Rombel.DaftarAnggotaRombel)
                        {
                            var daftarEkstrakulikuler = anggota.DaftarRaport.Where(r => r.KategoriNilai == KategoriNilaiRaport.Ekstrakulikuler);
                            var rowspan = daftarEkstrakulikuler.Count() + 1;

                            <tr>
                                <td rowspan="@rowspan">@anggota.Siswa.NIS/@anggota.Siswa.NISN</td>
                                <td rowspan="@rowspan">@anggota.Siswa.Nama</td>
                                <td rowspan="@rowspan">
                                    <button type="button" class="btn btn-primary btn-tambah">
                                        + Tambah
                                    </button>
                                    @{
                                        var modelTambah = new TambahEkstrakulikulerVM
                                        {
                                            IdAnggotaRombel = anggota.Id,
                                            IdRombel = Model.Rombel.Id,
                                            IdTahunAjaran = Model.TahunAjaran.Id
                                        };
                                    }
                                    <div class="form-tambah" style="display:none">
                                        <partial name="/Areas/DashboardGuru/Views/Raport/_FormTambahEkstrakulikulerPartial.cshtml" model="@modelTambah"/>
                                    </div>
                                </td>
                            </tr>

                            @foreach (var ekstrakulikuler in daftarEkstrakulikuler)
                            {
                                <tr>
                                    <td>@ekstrakulikuler.Nama</td>
                                    <td>@ekstrakulikuler.Predikat</td>
                                    <td>@ekstrakulikuler.Deskripsi</td>
                                    <td>
                                        <button class="btn btn-primary btn-edit" data-toggle="tooltip" title="Edit Ekstrakurikuler">
                                            <i class="fas fa-pencil-alt mr-2"></i>Edit
                                        </button>
                                        @{
                                            var modelEdit = new EditEkstrakulikulerVM
                                            {
                                                IdEkstrakulikuler = ekstrakulikuler.Id,
                                                IdTahunAjaran = Model.TahunAjaran.Id,
                                                IdRombel = Model.Rombel.Id,
                                                Nama = ekstrakulikuler.Nama,
                                                Predikat = ekstrakulikuler.Predikat,
                                                Keterangan = ekstrakulikuler.Deskripsi
                                            };
                                        }
                                        <div class="form-edit" style="display:none">
                                            <partial name="/Areas/DashboardGuru/Views/Raport/_FormEditEkstrakulikulerPartial.cshtml" model="@modelEdit" />
                                        </div>
                                        <form asp-action="HapusEkstrakulikuler" asp-route-idEkstrakulikuler="@ekstrakulikuler.Id"
                                              asp-route-idTahunAjaran="@Model.IdTahunAjaran" asp-route-idRombel="@Model.IdRombel" style="display:inline">
                                            <button type="submit" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Ekstrakurikuler">
                                                <i class="fas fa-trash mr-2"></i>Hapus
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
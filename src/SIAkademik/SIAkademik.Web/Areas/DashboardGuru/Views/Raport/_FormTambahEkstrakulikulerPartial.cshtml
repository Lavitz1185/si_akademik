@using SIAkademik.Web.Areas.DashboardGuru.Models.RaportModels
@model TambahEkstrakulikulerVM

<form asp-action="TambahEkstrakulikuler" asp-controller="Raport" asp-route-idTahunAjaran="@Model.IdTahunAjaran" 
    asp-route-idRombel="@Model.IdRombel" asp-route-idAnggotaRombel="@Model.IdAnggotaRombel" method="post">
    <div class="modal-header">
        <h5 class="modal-title" id="modalTambahTitle">Tambah Ekstrakulikuler</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        <div class="form-group">
            <label asp-for="@Model.Nama"></label>
            <input asp-for="@Model.Nama" class="form-control" />
            <span asp-validation-for="@Model.Nama" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Predikat"></label>
            <input asp-for="@Model.Predikat" class="form-control" />
            <span asp-validation-for="@Model.Predikat" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Keterangan"></label>
            <textarea asp-for="@Model.Keterangan" class="form-control"></textarea>
            <span asp-validation-for="@Model.Keterangan" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
        <button type="submit" class="btn btn-primary">Simpan</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
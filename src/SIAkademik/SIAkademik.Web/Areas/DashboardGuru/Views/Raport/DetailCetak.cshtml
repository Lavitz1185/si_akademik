@using SIAkademik.Web.Areas.DashboardGuru.Controllers
@model AnggotaRombel

@{
    ViewData["Title"] = $"Cetak Raport {Model.Siswa.Nama}";
}

<a asp-action="RaportPDF" asp-route-idSiswa="@Model.Siswa.Id" asp-route-idRombel="@Model.Rombel.Id" asp-route-download="@true" class="btn btn-warning mb-3"><i class="fas fa-download"></i> Download</a>

<embed class="pdf" src="@Url.ActionLink(nameof(RaportController.RaportPDF), "Raport", new { idSiswa = Model.Siswa.Id, idRombel = Model.Rombel.Id, download = false })"
       width="100%"
       height="600" />
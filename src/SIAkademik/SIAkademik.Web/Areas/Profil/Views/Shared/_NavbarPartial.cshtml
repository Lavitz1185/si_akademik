@inject IInformasiUmumRepository InformasiUmumRepository
@inject ISignInManager SignInManager

@{
    var informasiUmum = await InformasiUmumRepository.Get();
    var user = await SignInManager.GetUser();
}

<!-- ======================================= NAVIGATION ======================================= -->
<nav>
    <div class="logo">
        <img src="@informasiUmum.LogoSekolah.OriginalString" alt="Logo Sekolah" />
        <a asp-action="Index" asp-controller="Home" asp-area="Profil">
            @{
                var namaSekolahSplit = informasiUmum.NamaSekolah.Split(" ", StringSplitOptions.TrimEntries | StringSplitOptions.RemoveEmptyEntries);
            }
            @string.Join(" ", namaSekolahSplit.Take(2)) <br />
            @string.Join(" ", namaSekolahSplit.Skip(2))
        </a>
    </div>
    <div class="navigation">
        <ul>
            <i id="menu-close" class="ri-close-fill"></i>
            <li><a asp-action="Index" asp-controller="Home" asp-area="Profil">Beranda</a></li>
            <li class="has-submenu">
                <a> Informasi <i class="ri-arrow-down-s-line"></i> </a>
                <ul class="submenu">
                    <li><a asp-action="Index" asp-controller="Berita">Berita & Pengumuman</a></li>
                    <li><a asp-action="Index" asp-controller="Pegawai">Guru & Tendik</a></li>
                    <li><a asp-action="Index" asp-controller="Statistik">Statistik</a></li>
                </ul>
            </li>
            <li><a asp-action="Fasilitas" asp-controller="Home" asp-area="Profil">Fasilitas</a></li>
            <li><a asp-action="TentangKami" asp-controller="Home" asp-area="Profil">Tentang Kami</a></li>
            <li><a asp-action="Kontak" asp-controller="Home" asp-area="Profil">Alamat</a></li>
            @if (user is null)
            {
                <li><a asp-action="Login" asp-controller="Home" asp-area=@AreaNames.Profil>Login</a></li>
            }
            else
            {
                @if (user.Role == AppUserRoles.Admin)
                {
                    <li><a asp-action="Index" asp-controller="Home" asp-area=@AreaNames.DashboardAdmin>Dashboard</a></li>
                }

                @if (user.Role == AppUserRoles.Guru)
                {
                    <li><a asp-action="Index" asp-controller="Home" asp-area=@AreaNames.DashboardGuru>Dashboard</a></li>
                }

                @if (user.Role == AppUserRoles.Siswa)
                {
                    <li><a asp-action="Index" asp-controller="Home" asp-area=@AreaNames.DashboardSiswa>Dashboard</a></li>
                }
            }
        </ul>
        <img id="menu-btn" src="/images/menu.png" alt="Menu Button" />
    </div>
</nav>


@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            const menuBtn = document.getElementById('menu-btn');
            const menuClose = document.getElementById('menu-close');
            const navUl = document.querySelector('nav .navigation ul');
            const submenuToggles = document.querySelectorAll('nav .has-submenu > a');

            // buka/tutup menu utama
            if (menuBtn) {
                menuBtn.addEventListener('click', () => navUl.classList.add('active'));
            }
            if (menuClose) {
                menuClose.addEventListener('click', () => navUl.classList.remove('active'));
            }

            // buka/tutup submenu
            submenuToggles.forEach(toggle => {
                toggle.addEventListener('click', function (e) {
                    e.preventDefault();
                    const parent = this.parentElement;

                    // Tutup submenu lain (jika ingin hanya satu terbuka)
                    document.querySelectorAll('nav .has-submenu').forEach(item => {
                        if (item !== parent) item.classList.remove('active');
                    });

                    // Toggle submenu aktif
                    parent.classList.toggle('active');
                });
            });
        });
    </script>

}
@model List<Pegawai>

@{
    ViewData["Title"] = "Guru & Tendik";
}

<!-- ======================================= PENGANTAR ======================================= -->
<section id="pegawai-home">
    <h2>Guru & Tendik</h2>
</section>

<!-- ======================================= SECTION GURU ======================================= -->
<section id="experts">
    <div class="judul-garis">
        <h2>Guru & Tendik</h2>
        <div class="garis-sisa"></div>
    </div>
    <div class="swiper expert-box">
        <div class="swiper-wrapper">
            @foreach (var pegawai in Model)
            {
                <!-- Guru -->
                <div class="swiper-slide profile">
                    @if (pegawai.FotoProfil is not null)
                    {
                        <img src="@pegawai.FotoProfil.OriginalString" alt="Foto Profil" style="width: 100%;" />
                    }
                    else
                    {
                        @if (pegawai.JenisKelamin == JenisKelamin.LakiLaki)
                        {
                            <img src="~/images/guru/guru-pria.png" />
                        }
                        else
                        {
                            <img src="~/images/guru/guru-wanita.png" />
                        }
                    }
                    <h6>@pegawai.Nama</h6>
                    <p>@pegawai.Jabatan.Jenis.Humanize()</p>
                    <div class="pro-links">
                        <a href="https://instagram.com/@pegawai.NamaInstagram" target="_blank"><i class="ri-instagram-fill"></i></a>
                    </div>
                </div>
            }
        </div>

        <!-- Navigasi swiper -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
</section>
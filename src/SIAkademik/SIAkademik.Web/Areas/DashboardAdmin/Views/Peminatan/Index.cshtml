@model List<Peminatan>

@{
    ViewData["Title"] = "Peminatan";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Peminatan" asp-action="Index"></a>Peminatan</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Peminatan</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-3">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Peminatan">
                    <i class="fas fa-plus"></i> Tambah Peminatan
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped" id="table-akun">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nama</th>
                        <th>Jenis</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var peminatan in Model)
                    {
                        <tr>
                            <td>@peminatan.Id</td>
                            <td>@peminatan.Nama</td>
                            <td>@peminatan.Jenis.Humanize()</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@peminatan.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit Peminatan"><i class="fas fa-pencil-alt"></i></a>
                                <form asp-action="Hapus" asp-route-id="@peminatan.Id" method="post" style="display:inline">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Peminatan"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
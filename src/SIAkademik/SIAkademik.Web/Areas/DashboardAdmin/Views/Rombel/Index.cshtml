@using SIAkademik.Web.Areas.DashboardAdmin.Models.RombelModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IKelasRepository KelasRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
    var daftarKelas = Model.TahunAjaran?.DaftarKelas ?? [];
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Rombel" asp-action="Index"></a>Rombel</li>
        </ol>
    </nav>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h4>Data Rombel</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3 align-items-center">

            <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
               data-toggle="tooltip" title="Tambah Rombel">
                <i class="fas fa-plus"></i> Tambah Rombel
            </a>

            <form asp-action="Index" method="get">
                <div class="input-group">
                    <select name="idTahunAjaran" id="idTahunAjaran" class="form-control mr-1">
                        @if (Model.TahunAjaran is null)
                        {
                            <option selected value="@null">--</option>
                        }
                        else
                        {
                            <option value="@null">--</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            @if (Model.TahunAjaran == tahunAjaran)
                            {
                                <option selected value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                            }
                            else
                            {
                                <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                            }
                        }
                    </select>

                    <select name="idKelas" id="idKelas" class="form-control mr-1">
                        @if (Model.Kelas is null)
                        {
                            <option selected value="@null">--</option>
                        }
                        else
                        {
                            <option value="@null">--</option>
                        }

                        @foreach (var kelas in daftarKelas)
                        {
                            @if (Model.Kelas == kelas)
                            {
                                <option selected value="@kelas.Id">@kelas.Jenjang.Humanize() @kelas.Peminatan.Humanize()</option>
                            }
                            else
                            {
                                <option value="@kelas.Id">@kelas.Jenjang.Humanize() @kelas.Peminatan.Humanize()</option>
                            }
                        }
                    </select>

                    <button type="submit" class="btn btn-secondary">Filter</button>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nama</th>
                        <th>Kelas</th>
                        <th>Wali</th>
                        <th>Jumlah Siswa</th>
                        <th>Tahun Ajaran</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rombel in Model.DaftarRombel)
                    {
                        <tr>
                            <td>@rombel.Id</td>
                            <td>@rombel.Nama</td>
                            <td>@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Humanize()</td>
                            <td>@rombel.Wali.Nama</td>
                            <td>@rombel.DaftarAnggotaRombel.Count</td>
                            <td>@rombel.Kelas.TahunAjaran.Periode @rombel.Kelas.TahunAjaran.Semester.Humanize()</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@rombel.Id" class="btn btn-warning">Detail</a>
                                <a asp-action="Edit" asp-route-id="@rombel.Id" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
                                <form asp-action="Hapus" asp-route-id="@rombel.Id" style="display:inline">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(
            $('form select#idTahunAjaran').on('change', async function () {
                const idTahunAjaran = $(this).val()

                if (idTahunAjaran == "") {
                    $('form select#idKelas').html('<option value="">--</option>');
                } else {
                    const response = await fetch(`/Dashboard/Admin/Kelas/DaftarKelas?idTahunAjaran=${idTahunAjaran}`)
                    const daftarKelas = await response.json();

                    $('form select#idKelas').html('<option value="">--</option>');

                    for (let kelas of daftarKelas) {
                        $('form select#idKelas')
                            .append(`<option value="${kelas.id}">${kelas.jenjang} ${kelas.peminatan}</option>`);
                    }
                }
            })
        )
    </script>
}
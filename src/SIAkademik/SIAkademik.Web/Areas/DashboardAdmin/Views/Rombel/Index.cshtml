@using SIAkademik.Web.Areas.DashboardAdmin.Models.RombelModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IKelasRepository KelasRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
    var daftarKelas = Model.TahunAjaran?.DaftarKelas ?? [];
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Rombel" asp-action="Index"></a>Rombel</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Rombel</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah" asp-route-idTahunAjaran="@Model.TahunAjaran?.Id"
                   asp-route-idKelas="@Model.Kelas?.Id"
                   data-toggle="tooltip" title="Tambah Rombel">
                    <i class="fas fa-plus"></i> Tambah Rombel
                </a>
            </div>

            <form asp-action="Index" method="get">
                <div class="d-flex ml-auto mr-3">
                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Tahun Ajaran:</label>
                        <select asp-for="@Model.IdTahunAjaran" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            <option value="@null">-- Pilih --</option>

                            @foreach (var tahunAjaran in daftarTahunAjaran)
                            {
                                <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.IdKelas" class="mb-0" style="font-weight: 600;">Kelas:</label>
                        <select asp-for="@Model.IdKelas" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            <option value="@null">-- Pilih --</option>

                            @foreach (var kelas in daftarKelas)
                            {
                                <option value="@kelas.Id">@kelas.Jenjang.Humanize() @kelas.Peminatan.Nama</option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nama</th>
                        <th>Kelas</th>
                        <th>Wali</th>
                        <th>Jumlah Siswa</th>
                        <th>Tahun Ajaran</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rombel in Model.DaftarRombel)
                    {
                        <tr>
                            <td>@rombel.Id</td>
                            <td>@rombel.Nama</td>
                            <td>@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama</td>
                            <td>@rombel.Wali.Nama</td>
                            <td>@rombel.DaftarAnggotaRombel.Count</td>
                            <td>@rombel.Kelas.TahunAjaran.Periode @rombel.Kelas.TahunAjaran.Semester.Humanize()</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@rombel.Id" class="btn btn-warning" data-toggle="tooltip" title="Detail Rombel"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@rombel.Id" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
                                <form asp-action="Hapus" asp-route-id="@rombel.Id" style="display:inline" method="post">
                                    <button type="button" class="btn btn-danger swal-confirm"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('.submit-on-change').on('change', function() {
                $(this).closest('form').trigger('submit');
            });
        });
    </script>
}
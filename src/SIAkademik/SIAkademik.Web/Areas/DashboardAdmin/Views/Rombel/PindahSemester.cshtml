@using SIAkademik.Web.Areas.DashboardAdmin.Models.RombelModels
@model PindahSemesterVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IRombelRepository RombelRepository

@{
    ViewData["Title"] = "Pindah Semester";
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll(Semester.Ganjil);
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Rombel" asp-action="Pindah Semester"></a>Pindah Semester</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Pindah Semester</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3">
            <form asp-action="PindahSemester" method="get">
                <div class="d-flex ml-auto mr-3">
                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.IdTahunAjaranAsal" class="mb-0" style="font-weight: 600;">Tahun Ajaran Asal:</label>
                        <select asp-for="@Model.IdTahunAjaranAsal" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            @if (Model.IdTahunAjaranAsal is null)
                            {
                                <option value="@null">-- Pilih Tahun Ajaran --</option>
                            }

                            @foreach (var tahunAjaran in daftarTahunAjaran)
                            {
                                <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                            }
                        </select>
                    </div>
                </div>
            </form>

            <div class="d-flex mr-auto mr-3">
                <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                    <label class="mb-0" style="font-weight: 600;">Tahun Ajaran Tujuan:</label>
                    @if(Model.TahunAjaranTujuan is not null)
                    {
                        <label class="mb-0">@Model.TahunAjaranTujuan.Periode @Model.TahunAjaranTujuan.Semester.Humanize()</label>
                    }
                    else
                    {
                        @if(Model.TahunAjaranAsal is not null)
                        {
                            <a 
                                asp-action="Tambah" 
                                asp-controller="TahunAjaran" 
                                asp-route-tahun="@Model.TahunAjaranAsal.Tahun" 
                                asp-route-semester="@Semester.Genap"
                                asp-route-returnUrl="@Url.Action("PindahSemester", new { Model.IdTahunAjaranAsal })"
                                class="btn btn-primary">
                                Tambah
                            </a>
                        }
                    }
                </div>
            </div>

            @if(Model.IdTahunAjaranAsal is not null && Model.IdTahunAjaranTujuan is not null)
            {
                <div class="d-flex ml-auto mr-3">
                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <form asp-action="PindahSemesterPOST"
                              asp-route-idTahunAjaranAsal="@Model.IdTahunAjaranAsal"
                              asp-route-idTahunAjaranTujuan="@Model.IdTahunAjaranTujuan"
                              method="post">
                            <button class="btn btn-primary">Pindah ke Semester Genap</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

    <h4>Daftar Rombel Tahun Ajaran Asal</h4>
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="table-akun">
            <thead>
                <tr>
                    <th>Kelas</th>
                    <th>Nama</th>
                    <th>Wali</th>
                    <th>Jumlah Siswa</th>
                    <th>Tahun Ajaran</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.TahunAjaranAsal is null)
                {
                    <tr>
                        <td colspan="6" align="center">Pilih Tahun Ajaran Asal</td>
                    </tr>
                }
                else
                {
                    @foreach (var rombel in await RombelRepository.GetAllByTahunAjaran(Model.TahunAjaranAsal.Id))
                    {
                        <tr>
                            <td>@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama</td>
                            <td>@rombel.Nama</td>
                            <td>@rombel.Wali.Nama</td>
                            <td>@rombel.DaftarAnggotaRombel.Count</td>
                            <td>@rombel.TahunAjaran.Periode @rombel.TahunAjaran.Semester.Humanize()</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <h4>Daftar Rombel Tahun Ajaran Tujuan</h4>
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="table-akun">
            <thead>
                <tr>
                    <th>Kelas</th>
                    <th>Nama</th>
                    <th>Wali</th>
                    <th>Jumlah Siswa</th>
                    <th>Tahun Ajaran</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.TahunAjaranTujuan is null)
                {
                    <tr>
                        <td colspan="6" align="center">Tambah Tahun Ajaran Tujuan</td>
                    </tr>
                }
                else
                {
                    @foreach (var rombel in await RombelRepository.GetAllByTahunAjaran(Model.TahunAjaranTujuan.Id))
                    {
                        <tr>
                            <td>@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama</td>
                            <td>@rombel.Nama</td>
                            <td>@rombel.Wali.Nama</td>
                            <td>@rombel.DaftarAnggotaRombel.Count</td>
                            <td>@rombel.TahunAjaran.Periode @rombel.TahunAjaran.Semester.Humanize()</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@using SIAkademik.Web.Areas.DashboardAdmin.Models.RombelModels
@model DetailVM

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Rombel" asp-action="Index" asp-route-idKelas="@Model.Rombel.Kelas.Id" asp-route-idTahunAjaran="@Model.Rombel.TahunAjaran.Id">Rombel</a></li>
            <li class="breadcrumb-item" aria-current="page">Detail Data</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-info mb-2">
                <div class="card-header" style="padding-top: 20px;">
                    <h4>Informasi Detail Rombel</h4>
                </div>
                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Jenjang</div>
                                <div class="col">@Model.Rombel.Kelas.Jenjang.Humanize()</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Peminatan</div>
                                <div class="col">@Model.Rombel.Kelas.Peminatan.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Kelas</div>
                                <div class="col">@Model.Rombel.Nama</div>
                            </div>
                        </div>

                        <!-- Kolom kanan -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Tahun Ajaran</div>
                                <div class="col">@Model.Rombel.TahunAjaran.Periode</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Semester</div>
                                <div class="col">@Model.Rombel.TahunAjaran.Semester.Humanize()</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Nama Wali</div>
                                <div class="col">@Model.Rombel.Wali.Nama (@Model.Rombel.Wali.Id)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Percobaan *@
            <div class="card">
                <div class="card-body mt-3">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                               aria-controls="home" aria-selected="true">Daftar Seluruh Siswa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Daftar Siswa Dalam Rombel</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <form asp-action="TambahSiswaBanyak" asp-route-id="@Model.Id">
                                <input hidden readonly asp-for="@Model.Id" />
                                <div class="d-flex justify-content-center ml-auto mb-3">
                                    <!-- Tombol Tambah + Info Jumlah -->
                                    <div class="d-flex flex-column align-items-end ml-auto pr-4">
                                        <button type="submit" class="btn btn-icon btn-primary"
                                                disabled data-toggle="tooltip" title="Berlaku untuk langsung menambah banyak siswa">
                                            Tambah Banyak ke Rombel<i class="fas fa-arrow-right pl-2"></i>
                                        </button>

                                        <!-- Info jumlah dipilih -->
                                        <div>
                                            <span id="selectedCount" class="fw-semibold text-black-50">0</span> dari
                                            <span id="totalCount"></span> data dipilih
                                        </div>
                                    </div>
                                </div>

                                <div class="table-responsive col-12">
                                    <table class="table table-striped table-hover" id="table-akun0">
                                        <thead>
                                            <tr>
                                                <th style="max-width: 60px; text-align: center;">
                                                    <input id="pilihSemua" class="select-all" type="checkbox" style="cursor:pointer;" />
                                                </th>
                                                <th>NISN</th>
                                                <th>Nama Siswa</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.DaftarSiswaTambah.Count; i++)
                                            {
                                                var entry = Model.DaftarSiswaTambah[i];
                                                <tr>
                                                    <td style="text-align: center; padding-right: 28px;">
                                                        <input asp-for="@Model.DaftarSiswaTambah[@i].Selected" data-checkbox-all="#pilihSemua" type="checkbox" />
                                                        <input asp-for="@Model.DaftarSiswaTambah[@i].IdSiswa" hidden readonly />
                                                    </td>
                                                    <td>@entry.Siswa.NISN</td>
                                                    <td>@entry.Siswa.Nama</td>
                                                    <td>
                                                        <a asp-action="TambahSiswa" asp-route-id="@Model.Id" asp-route-idSiswa="@entry.IdSiswa" class="btn btn-primary">Tambah ke Rombel <i class="fas fa-arrow-right pl-2"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

                            <form asp-action="HapusSiswaBanyak" method="post">
                                <input hidden readonly asp-for="@Model.Id"/>
                                <div class="d-flex justify-content-center ml-auto mb-3">
                                    <!-- Tombol Tambah + Info Jumlah -->
                                    <div class="d-flex flex-column align-items-end ml-auto pr-4">
                                        <button type="submit" class="btn btn-icon btn-danger swal-confirm"
                                                disabled data-toggle="tooltip" title="Berlaku untuk langsung menghapus banyak siswa">
                                            <i class="fas fa-arrow-left pr-2"></i>Hapus Banyak dari Rombel
                                        </button>

                                        <!-- Info jumlah dipilih -->
                                        <div>
                                            <span id="selectedCount" class="fw-semibold text-black-50">0</span> dari
                                            <span id="totalCount"></span> data dipilih
                                        </div>
                                    </div>
                                </div>

                                <div class="table-responsive col-12">
                                    <table class="table table-striped table-hover" id="table-akunn">
                                        <thead>
                                            <tr>
                                                <th style="max-width: 60px !important; text-align: center;">
                                                    <input id="pilihSemua" class="select-all" type="checkbox" style="cursor:pointer;" />
                                                </th>
                                                <th>NISN</th>
                                                <th>Nama Siswa</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.DaftarSiswaHapus.Count; i++)
                                            {
                                                var entry = Model.DaftarSiswaHapus[i];
                                                <tr>
                                                    <td style="text-align: center; padding-right: 28px;">
                                                        <input asp-for="@Model.DaftarSiswaHapus[@i].Selected" data-checkbox-all="#pilihSemua" type="checkbox" />
                                                        <input asp-for="@Model.DaftarSiswaHapus[@i].IdSiswa" hidden readonly />
                                                    </td>
                                                    <td>@entry.Siswa.NISN</td>
                                                    <td>@entry.Siswa.Nama</td>
                                                    <td>
                                                        <a asp-action="HapusSiswa" asp-route-id="@Model.Id" asp-route-idSiswa="@entry.IdSiswa" class="btn btn-danger"><i class="fas fa-arrow-left pr-2"></i>Hapus dari Rombel</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


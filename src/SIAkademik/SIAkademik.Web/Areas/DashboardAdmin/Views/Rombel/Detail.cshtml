@model Rombel

@inject ISiswaRepository SiswaRepository
@inject IKelasRepository KelasRepository

@{
    var daftarSiswa = await SiswaRepository.GetAll();
    daftarSiswa = daftarSiswa
        .Where(s => s.StatusAktif == StatusAktifMahasiswa.Aktif && 
                    s.DaftarAnggotaRombel.All(a => a.Rombel.Kelas.TahunAjaran != Model.Kelas.TahunAjaran))
        .ToList();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Rombel" asp-action="Index">Rombel</a></li>
            <li class="breadcrumb-item" aria-current="page">Detail Data</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-warning">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Informasi Rombel</h4>
                </div>
                    <div class="card-body">
                    <h6>@Model.Kelas.Jenjang.Humanize() @Model.Kelas.Peminatan.Nama @Model.Nama - @Model.Kelas.TahunAjaran.Periode @Model.Kelas.TahunAjaran.Semester.Humanize()</h6>
                    <h6>Wali : @Model.Wali.Nama (@Model.Wali.Id)</h6>
                    </div>
            </div>
        </div>
    </div>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive col-12">
                        <table class="table table-striped table-hover" id="table-akun">
                            <thead>
                                <tr>
                                    <th>Daftar Seluruh Siswa</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var siswa in daftarSiswa)
                                {
                                    <tr>
                                        <td>@siswa.NISN @siswa.Nama</td>
                                        <td>
                                            <form asp-action="TambahSiswa" asp-route-id="@Model.Id" asp-route-idSiswa="@siswa.Id">
                                                <button type="submit" class="btn btn-primary">Tambah ke Rombel</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                                
                            </table>
                        </div>
                </div>

            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                        <div class="table-responsive col-12">
                        <table class="table table-striped table-hover" id="table-akun">
                            <thead>
                                <tr>
                                    <th>Daftar Siswa Dalam Rombel</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var siswa in Model.DaftarAnggotaRombel.Select(a => a.Siswa))
                                {
                                    <tr>
                                        <td>@siswa.NISN @siswa.Nama</td>
                                        <td>
                                            <form asp-action="HapusSiswa" asp-route-id="@Model.Id" asp-route-idSiswa="@siswa.Id">
                                                <button type="submit" class="btn btn-primary">Hapus dari Rombel</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>                             
                            </table>
                        </div>
                </div>

            </div>
        </div>
    </div>
</div>


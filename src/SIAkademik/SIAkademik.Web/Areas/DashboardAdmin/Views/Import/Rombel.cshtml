@using SIAkademik.Web.Models
@model ImportVM<Rombel>

@{
    ViewData["Title"] = "Import Data Rombel";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Import" asp-action="Rombel"></a>Import Data Rombel</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Import Data Rombel</h4>
    </div>
    <div class="p-4">
        <div class="d-flex justify-content-start mb-3">
            <a class="btn btn-icon icon-left btn-success"
               asp-action="DownloadTemplateRombel"
               target="_blank">
                Download Template
            </a>
        </div>

        <div>
            <form asp-action="Rombel" enctype="multipart/form-data" class="text-center w-100">

                <!-- Kotak dashed -->
                <label for="fileInput"
                       class="border border-2 border-secondary-subtle rounded-3 bg-white d-flex flex-column align-items-center justify-content-center w-100"
                       style="height: 200px; border-style: dashed !important; cursor: pointer;">
                    <i class="fas fa-file-excel text-success mb-2" style="font-size: 2.5rem;"></i>
                    <p class="text-muted file-name">Pilih file excel (.xlsx)</p>
                </label>

                <!-- Input file tersembunyi -->
                <input asp-for="@Model.FormFile" id="fileInput" class="import-file-input d-none" type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
                <span asp-validation-for="@Model.FormFile" class="text-danger d-block mt-2"></span>

                <!-- Tombol upload di luar kotak -->
                <button type="submit" class="btn btn-primary mt-4">Upload</button>
            </form>
        </div>

        <div>
            @if (Model.FileName is not null)
            {
                <p>File Yang Diupload : @Model.FileName</p>
                <h2>Data Baru</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nama</th>
                            <th>Kelas</th>
                            <th>Wali</th>
                            <th>Jumlah Siswa</th>
                            <th>Tahun Ajaran</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rombel in Model.NewData)
                        {
                            <tr>
                                <td>@rombel.Id</td>
                                <td>@rombel.Nama</td>
                                <td>@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama</td>
                                <td>@rombel.Wali.Nama</td>
                                <td>@rombel.DaftarAnggotaRombel.Count</td>
                                <td>@rombel.TahunAjaran.Periode @rombel.TahunAjaran.Semester.Humanize()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
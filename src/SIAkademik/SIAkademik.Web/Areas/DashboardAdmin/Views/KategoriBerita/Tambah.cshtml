@using SIAkademik.Web.Areas.DashboardAdmin.Models.KategoriBeritaModels

@model TambahVM

@{
    ViewData["Title"] = "Tambah Kategori Berita";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Profil</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="KategoriBerita" asp-action="Index">Kategori Berita</a></li>
            <li class="breadcrumb-item" aria-current="page">Tambah Data</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card card-success">
                <div class="card-header" style="padding-top: 20px;">
                    <h4>Tambah Kategori Berita</h4>
                </div>

                <form asp-action="Tambah" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>

                        <div class="form-group">
                            <label asp-for="@Model.Nama"></label>
                            <input asp-for="@Model.Nama" class="form-control" />
                            <span asp-validation-for="@Model.Nama" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer text-right pt-0">
                        <a href="javascript:void(0)" class="btn btn-danger text-white swal-cancel">Batal</a>
                        <button class="btn btn-primary mr-1" type="submit">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
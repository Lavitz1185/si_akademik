@using SIAkademik.Web.Areas.DashboardAdmin.Models.TujuanPembelajaranModels
@model IndexVM

@inject IMataPelajaranRepository MataPelajaranRepository

@{
    ViewData["Title"] = "Tujuan Pembelajaran (TP)";
    var daftarMataPelajaran = await MataPelajaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="TujuanPembelajaran" asp-action="Index" asp-route-idMataPelajaran="@Model.IdMataPelajaran" asp-route-fase="@Model.Fase"></a>Tujuan Pembelajaran (TP)</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Tujuan Pembelajaran</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah" asp-route-idMataPelajaran="@Model.IdMataPelajaran"
                   asp-route-fase="@Model.Fase"
                   data-toggle="tooltip" title="Tambah Tujuan Pembelajaran">
                    <i class="fas fa-plus"></i> Tambah Data
                </a>

                <a asp-action="TujuanPembelajaran" asp-controller="Import" class="btn btn-icon icon-left btn-success" data-toggle="tooltip" title="Import Data Siswa">
                    <i class="fas fa-file-upload"></i> Import Data
                </a>
            </div>

            <form asp-action="Index" method="get">
                <div class="d-flex ml-auto mr-3">
                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.IdMataPelajaran" class="mb-0" style="font-weight: 600;">Mata Pelajaran:</label>
                        <select asp-for="@Model.IdMataPelajaran" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            <option value="@null">-- Semua --</option>

                            @foreach (var mataPelajaran in daftarMataPelajaran)
                            {
                                <option value="@mataPelajaran.Id">@mataPelajaran.Nama @mataPelajaran.Peminatan.Nama</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.Fase" class="mb-0" style="font-weight: 600;">Fase:</label>
                        <select asp-for="@Model.Fase" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            <option value="@null">-- Semua --</option>

                            @foreach (var fase in Enum.GetValues<Fase>())
                            {
                                <option value="@fase">@fase.Humanize()</option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Mata Pelajaran</th>
                        <th style="min-width: 150px">Fase</th>
                        <th style="min-width: 700px">Dekripsi & Aksi</th>
                    </tr>
                </thead>
                <tbody id="accordionTujuan">
                    @foreach (var group in Model.DaftarTujuanPembelajaran
                    .GroupBy(tp => new
                    {
                       tp.MataPelajaran.Id,
                       tp.MataPelajaran.Nama,
                       Peminatan = tp.MataPelajaran.Peminatan.Nama,
                       tp.Fase
                    })
                    .OrderBy(g => g.Key.Nama))
                    {
                        var groupId = $"{group.Key.Id}-{group.Key.Fase}";
                        <tr>
                            <td>@group.Key.Nama @group.Key.Peminatan</td>
                            <td>@group.Key.Fase.Humanize()</td>
                            <td>
                                <p>
                                    <button class="btn btn-outline-info btn-sm"
                                            type="button"
                                            data-toggle="collapse"
                                            data-target="#collapse-@groupId"
                                            aria-expanded="false"
                                            aria-controls="collapse-@groupId"
                                            data-parent="#accordionTujuan">
                                        Lihat Deskripsi <i class="fas fa-chevron-down ml-1"></i>
                                    </button>
                                </p>

                                <div id="collapse-@groupId"
                                     class="collapse mt-2"
                                     data-parent="#accordionTujuan">
                                    <div class="">
                                        <table class="table table-sm table-bordered mb-0 bg-white">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th style="width: 80px;">Nomor</th>
                                                    <th>Deskripsi</th>
                                                    <th style="width: 120px;">Aksi</th>
                                                </tr>
                                            </thead>
                                            <tbody style="color: black">
                                                @foreach (var tp in group.OrderBy(tp => tp.Nomor))
                                                {
                                                    <tr>
                                                        <td>@tp.Nomor</td>
                                                        <td>@tp.Deskripsi</td>
                                                        <td class="text-center">
                                                            <a asp-action="Edit"
                                                               asp-route-id="@tp.Id"
                                                               asp-route-idMataPelajaran="@Model.IdMataPelajaran"
                                                               asp-route-fase="@Model.Fase"
                                                               class="btn btn-sm btn-primary"
                                                               data-toggle="tooltip"
                                                               title="Edit Tujuan Pembelajaran">
                                                                <i class="fas fa-pencil-alt"></i>
                                                            </a>

                                                            <form asp-action="Hapus"
                                                                  asp-route-id="@tp.Id"
                                                                  asp-route-idMataPelajaran="@Model.IdMataPelajaran"
                                                                  asp-route-fase="@Model.Fase"
                                                                  method="post"
                                                                  class="d-inline">
                                                                <button type="button"
                                                                        class="btn btn-sm btn-danger swal-confirm"
                                                                        data-toggle="tooltip"
                                                                        title="Hapus Tujuan Pembelajaran">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('.submit-on-change').on('change', function() {
                $(this).closest('form').trigger('submit');
            });
        });
    </script>
}
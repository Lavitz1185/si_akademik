@using SIAkademik.Web.Areas.DashboardAdmin.Models.TujuanPembelajaranModels
@model IndexVM

@inject IMataPelajaranRepository MataPelajaranRepository

@{
    var daftarMataPelajaran = await MataPelajaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="TujuanPembelajaran" asp-action="Index" asp-route-idMataPelajaran="@Model.IdMataPelajaran" asp-route-fase="@Model.Fase"></a>Tujuan Pembelajaran (TP)</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Tujuan Pembelajaran</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah" asp-route-idMataPelajaran="@Model.IdMataPelajaran"
                   asp-route-fase="@Model.Fase"
                   data-toggle="tooltip" title="Tambah Tujuan Pembelajaran">
                    <i class="fas fa-plus"></i> Tambah
                </a>
            </div>

            <form asp-action="Index" method="get">
                <div class="d-flex ml-auto mr-3">
                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.IdMataPelajaran" class="mb-0" style="font-weight: 600;">Mata Pelajaran:</label>
                        <select asp-for="@Model.IdMataPelajaran" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            <option value="@null">-- Semua --</option>

                            @foreach (var mataPelajaran in daftarMataPelajaran)
                            {
                                <option value="@mataPelajaran.Id">@mataPelajaran.Nama @mataPelajaran.Peminatan.Nama</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex align-items-center mr-2" style="gap: 8px;">
                        <label asp-for="@Model.Fase" class="mb-0" style="font-weight: 600;">Fase:</label>
                        <select asp-for="@Model.Fase" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                            <option value="@null">-- Semua --</option>

                            @foreach (var fase in Enum.GetValues<Fase>())
                            {
                                <option value="@fase">@fase.Humanize()</option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Mata Pelajaran</th>
                        <th>Fase</th>
                        <th>Nomor</th>
                        <th>Dekripsi</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tujuanPembelajaran in Model.DaftarTujuanPembelajaran)
                    {
                        <tr>
                            <td>@tujuanPembelajaran.MataPelajaran.Nama @tujuanPembelajaran.MataPelajaran.Peminatan.Nama</td>
                            <td>@tujuanPembelajaran.Fase.Humanize()</td>
                            <td>@tujuanPembelajaran.Nomor</td>
                            <td>@tujuanPembelajaran.Deskripsi</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@tujuanPembelajaran.Id" asp-route-idMataPelajaran="@Model.IdMataPelajaran"
                                    asp-route-fase="@Model.Fase" class="btn btn-primary" data-toggle="tooltip" title="Edit Tujuan Pembelajaran">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form asp-action="Hapus" asp-route-id="@tujuanPembelajaran.Id" asp-route-idMataPelajaran="@Model.IdMataPelajaran"
                                      asp-route-fase="@Model.Fase" style="display:inline" method="post">
                                    <button type="button" class="btn btn-danger swal-confirm" data-toggle="tooltip" title="Hapus Tujuan Pembelajaran"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('.submit-on-change').on('change', function() {
                $(this).closest('form').trigger('submit');
            });
        });
    </script>
}
@using SIAkademik.Web.Areas.DashboardAdmin.Models.KelasModels

@model IndexVM
@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<div class="card card-primary">
    <div class="card-header">
        <h4>Data Kelas</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-2">
            <form method="get" asp-action="Index" id="form">
                <select id="idTahunAjaran" name="idTahunAjaran" required>
                    @if (Model.TahunAjaran is null)
                    {
                        <option selected value="@null">--</option>
                    }
                    else
                    {
                        <option value="@null">--</option>
                    }
                    @foreach (var tahunAjaran in daftarTahunAjaran)
                    {
                        @if (tahunAjaran == Model.TahunAjaran)
                        {
                            <option selected value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                        else
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    }
                </select>

                <button type="submit">Filter</button>
            </form>
            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Kelas">
                    <i class="fas fa-plus"></i> Tambah Kelas
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun-1">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Jenjang</th>
                        <th>Peminatan</th>
                        <th>Tahun Ajaran</th>
                        <th>Jumlah Rombel</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kelas in Model.DaftarKelas)
                    {
                        <tr>
                            <td>@kelas.Id</td>
                            <td>@kelas.Jenjang.Humanize()</td>
                            <td>@kelas.Peminatan.Humanize()</td>
                            <td>@kelas.TahunAjaran.Periode-@kelas.TahunAjaran.Semester.Humanize()</td>
                            <td>@kelas.DaftarRombel.Count</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@kelas.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form style="display:inline" asp-action="Hapus" asp-route-id="@kelas.Id">
                                    <button type="submit" class="btn btn-danger btn-action" title="Hapus">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>


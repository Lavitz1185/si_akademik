@using SIAkademik.Web.Areas.DashboardAdmin.Models.KelasModels

@model IndexVM
@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Kelas" asp-action="Index"></a>Kelas</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Kelas</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between mb-3">
            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah" data-toggle="tooltip" title="Tambah Kelas">
                    <i class="fas fa-plus me-1"></i> Tambah Kelas
                </a>
            </div>       
        </div>

        <div class="table-responsive">
            <table class="table table-striped" id="table-akun">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Jenjang</th>
                        <th>Peminatan</th>
                        <th>Jumlah Rombel</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kelas in Model.DaftarKelas)
                    {
                        <tr>
                            <td>@kelas.Id</td>
                            <td>@kelas.Jenjang.Humanize()</td>
                            <td>@kelas.Peminatan.Nama</td>
                            <td>@kelas.DaftarRombel.Count</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@kelas.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit Kelas">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form style="display:inline" asp-action="Hapus" method="post" asp-route-id="@kelas.Id">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Kelas">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>
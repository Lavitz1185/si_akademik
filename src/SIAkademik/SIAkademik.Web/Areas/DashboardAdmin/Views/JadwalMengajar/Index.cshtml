@using SIAkademik.Web.Areas.DashboardAdmin.Models.JadwalMengajarModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="JadwalMengajar" asp-action="Index"></a>Jadwal Mengajar</li>
        </ol>
    </nav>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h4>Data Jadwal Mengajar</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-between ml-auto mb-2">

            <div class="mb-0">
                @if (Model.TahunAjaran is not null)
                {
                    <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah" asp-route-idTahunAjaran="@Model.TahunAjaran.Id"
                       data-toggle="tooltip" title="Tambah Jadwal Mengajar">
                        <i class="fas fa-plus"></i>Tambah Jadwal Mengajar
                    </a>
                }                
            </div>

            <form asp-action="Index" , method="get" id="idTahunAjaran">
                <select name="idTahunAjaran" id="idTahunAjaran" class="form-control">
                    @foreach (var tahunAjaran in daftarTahunAjaran)
                    {
                        @if (tahunAjaran == Model.TahunAjaran)
                        {
                            <option selected value="@tahunAjaran.Id">@tahunAjaran.Periode - @tahunAjaran.Semester.Humanize()</option>
                        }
                        else
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode - @tahunAjaran.Semester.Humanize()</option>
                        }
                    }
                </select>
            </form>
        </div>

        

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Mata Pelajaran</th>
                        <th>Rombel</th>
                        <th>Guru</th>
                        <th>Hari</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var jadwalMengajar in Model.DaftarJadwalMengajar)
                    {
                        <tr>
                            <td>@jadwalMengajar.Id</td>
                            <td>@jadwalMengajar.MataPelajaran.Nama</td>
                            <td>@jadwalMengajar.Rombel.Kelas.Jenjang.Humanize() @jadwalMengajar.Rombel.Kelas.Peminatan.Nama @jadwalMengajar.Rombel.Nama</td>
                            <td>@jadwalMengajar.Pegawai.Nama</td>
                            <td>
                                <table class="table align-middle mb-2">
                                    <tbody>
                                        @foreach (var hari in jadwalMengajar.DaftarHariMengajar.OrderBy(h => h.Hari))
                                        {
                                            <tr>
                                                <td>@hari.Hari.Humanize()</td>
                                                <td>
                                                    @hari.JamMulai.ToString(CultureInfos.CI.DateTimeFormat.ShortTimePattern, CultureInfos.CI)
                                                    -
                                                    @hari.JamAkhir.ToString(CultureInfos.CI.DateTimeFormat.ShortTimePattern, CultureInfos.CI)
                                                </td>
                                                <td class="text-center">
                                                    <a asp-action="EditHari"
                                                       asp-route-id="@jadwalMengajar.Id"
                                                       asp-route-idHariMengajar="@hari.Id"
                                                       class="btn btn-sm border-0 bg-transparent"
                                                       style="box-shadow: none;" title="Edit">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <form asp-action="HapusHari"
                                                          asp-route-id="@jadwalMengajar.Id"
                                                          asp-route-idHariMengajar="@hari.Id"
                                                          class="d-inline">
                                                        <button type="button"
                                                                class="btn btn-sm text-danger border-0 bg-transparent swal-confirm"
                                                                style="box-shadow: none;" title="Hapus">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <a asp-action="TambahHari"
                                   asp-route-id="@jadwalMengajar.Id"
                                   class="btn btn-success btn-sm" title="Tambah Hari">
                                    <i class="fas fa-plus"></i> Tambah
                                </a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@jadwalMengajar.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit"><i class="fas fa-pencil-alt"></i></a>
                                <form asp-action="Hapus" asp-route-id="@jadwalMengajar.Id" method="post" style="display:inline">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" title="Hapus"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(
            $('select#idTahunAjaran').on('change', () => $('form#idTahunAjaran').submit())
        )
    </script>
}
@model List<MataPelajaran>

@{
    ViewData["Title"] = "Mata Pelajaran";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="MataPelajaran" asp-action="Index"></a>Mata Pelajaran</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Mata Pelajaran</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Mata Pelajaran">
                    <i class="fas fa-plus"></i> Tambah Data
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-export">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Peminatan</th>
                        <th>KKM</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mataPelajaran in Model)
                    {
                        <tr>
                            <td>@mataPelajaran.Nama</td>
                            <td>@mataPelajaran.Peminatan.Nama</td>
                            <td>@mataPelajaran.KKM.ToString("F2")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@mataPelajaran.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit Mata Pelajaran">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form style="display:inline" asp-action="Hapus" method="post" asp-route-id="@mataPelajaran.Id">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Mata Pelajaran">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
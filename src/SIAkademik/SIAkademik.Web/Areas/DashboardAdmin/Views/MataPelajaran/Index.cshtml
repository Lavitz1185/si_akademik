@model List<MataPelajaran>

<div class="card card-primary">
    <div class="card-header">
        <h4>Data Mata Pelajaran</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-2">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Mata Pelajaran">
                    <i class="fas fa-plus"></i> Tambah Mata Pelajaran
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nama</th>
                        <th>Jenjang</th>
                        <th>Peminatan</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mataPelajaran in Model)
                    {
                        <tr>
                            <td>@mataPelajaran.Id</td>
                            <td>@mataPelajaran.Nama</td>
                            <td>@mataPelajaran.Jenjang</td>
                            <td>@mataPelajaran.Peminatan</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@mataPelajaran.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form style="display:inline" asp-action="Hapus" asp-route-id="@mataPelajaran.Id">
                                    <button type="submit" class="btn btn-danger btn-action" title="Hapus">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>


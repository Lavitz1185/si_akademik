@using SIAkademik.Web.Areas.DashboardAdmin.Models.BeritaModels
@model IndexVM

@inject IKategoriBeritaRepository KategoriBeritaRepository

@{
    var daftarKategoriBerita = await KategoriBeritaRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Profil</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Berita" asp-action="Index"></a>Berita & Pengumuman</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Berita</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-beetwen mb-3">
            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary mr-1" asp-action="Tambah" data-toggle="tooltip" title="Tambah Berita">
                    <i class="fas fa-plus"></i> Tambah Berita
                </a>
            </div>

            <div class="d-flex justify-content-center align-items-center pr-3 ml-auto">
                <div class="mb-0 mr-2">
                    <button class="btn btn-icon icon-left btn-info" id="toggleFilter">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>

                <div class="mb-0">
                    <a href="" class="btn btn-icon icon-left btn-success" id="refreshButton">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </a>
                </div>
            </div>                      
        </div>

        <!-- Panel Filter -->
        <form asp-action="Index" method="post">
            <div id="filterPanel" class="card p-3 mb-4" @(Model.KategoriBerita.Any(a => a.Selected) || Model.Bulan.Any(a => a.Selected) || Model.Tahun.Any(a => a.Selected) ? "" : "style=display:none")>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <h6>Kategori Berita</h6>
                        @for (int i = 0; i < Model.KategoriBerita.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.KategoriBerita[@i].Selected">
                                <input asp-for="@Model.KategoriBerita[@i].Value" readonly hidden> 
                                @daftarKategoriBerita.First(a => a.Id == Model.KategoriBerita[i].Value).Nama
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Bulan</h6>
                        @for (int i = 0; i < Model.Bulan.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.Bulan[@i].Selected">
                                <input asp-for="@Model.Bulan[@i].Value" readonly hidden>
                                @CultureInfos.CI.DateTimeFormat.GetMonthName(Model.Bulan[i].Value)
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Tahun</h6>
                        @for (int i = 0; i < Model.Tahun.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.Tahun[@i].Selected">
                                <input asp-for="@Model.Tahun[@i].Value" readonly hidden>
                                @Model.Tahun[i].Value
                            </div>
                        }
                    </div>
                </div>

                <div class="text-right">
                    <a class="btn btn-secondary btn-sm" asp-action="Index">Reset</a>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="save-stage2">
                <thead>
                    <tr>
                        <th>Tanggal</th>
                        <th>Foto</th>
                        <th>Judul</th>
                        <th>Isi</th>
                        <th>Kategori</th>
                        <th style="min-width: 80px !important">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DaftarBerita)
                    {
                        <tr>
                            <td>@item.Tanggal.ToString(CultureInfos.CI.DateTimeFormat.LongDatePattern, CultureInfos.CI)</td>
                            <td><img src="@item.Foto.OriginalString" target="_blank"/></td>
                            <td>@item.Judul.Truncate(50, "...")</td>
                            <td>@Html.Raw(item.Isi.Truncate(100, "..."))</td>
                            <td>@item.KategoriBerita.Nama</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit Berita">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form style="display:inline" asp-action="Hapus" asp-route-id="@item.Id" method="post">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Berita">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ✅ Cegah error reinit
            let table = $("#save-stage2").DataTable({
                "scrollX": true,
                stateSave: true, // simpan posisi halaman
                pageLength: 10
            });

            const $filterPanel = $("#filterPanel");
            const $rows = $("#save-stage2 tbody tr");

            // Tombol toggle filter
            $("#toggleFilter").on("click", function () {
                $filterPanel.slideToggle(200);
            });

            // === Fungsi simpan & muat filter dari localStorage ===
            const filterKey = "pegawaiFilters";

            function saveFilters() {
                const selectedFilters = {};
                $(".filter:checked").each(function () {
                    const category = $(this).data("filter");
                    if (!selectedFilters[category]) selectedFilters[category] = [];
                    selectedFilters[category].push($(this).val());
                });
                localStorage.setItem(filterKey, JSON.stringify(selectedFilters));
            }

            function loadFilters() {
                const saved = localStorage.getItem(filterKey);
                if (!saved) return;
                const filters = JSON.parse(saved);

                // Centang checkbox sesuai data tersimpan
                for (const [category, values] of Object.entries(filters)) {
                    values.forEach(val => {
                        $(`.filter[data-filter="${category}"][value="${val}"]`).prop("checked", true);
                    });
                }
            }

            function applyFilters() {
                const filters = {};

                $(".filter:checked").each(function () {
                    const category = $(this).data("filter");
                    const value = $(this).val().toLowerCase();

                    if (!filters[category]) filters[category] = [];
                    filters[category].push(value);
                });

                // Custom filtering DataTables
                $.fn.dataTable.ext.search = []; // hapus filter lama

                $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
                    // data[] berisi isi kolom berdasarkan urutan th
                    const jenisKelamin = data[2].toLowerCase();
                    const agama = data[3].toLowerCase();
                    const statusPerkawinan = data[5].toLowerCase();
                    const tahunMasuk = data[9].toLowerCase();
                    const divisi = data[14].toLowerCase();

                    // periksa tiap kategori filter
                    for (const [category, values] of Object.entries(filters)) {
                        if (values.length === 0) continue;

                        let cellValue = "";
                        if (category === "jenisKelamin") cellValue = jenisKelamin;
                        if (category === "agama") cellValue = agama;
                        if (category === "statusPerkawinan") cellValue = statusPerkawinan;
                        if (category === "tahunMasuk") cellValue = tahunMasuk;
                        if (category === "divisi") cellValue = divisi;

                        if (!values.some(v => cellValue.includes(v))) {
                            return false; // baris ini tidak cocok
                        }
                    }

                    return true; // cocok semua filter
                });

                table.draw(); // refresh tampilan DataTable

                // Simpan ke localStorage
                saveFilters();
            }

            // Jalankan saat ada perubahan checkbox
            $(".filter").on("change", applyFilters);

            // Reset filter
            $("#resetFilter").on("click", function () {
                $(".filter").prop("checked", false);
                $.fn.dataTable.ext.search = []; // hapus semua filter custom
                table.search('').columns().search('').draw(); // refresh semua data
                localStorage.removeItem(filterKey);
            });

            // Muat filter tersimpan saat awal
            loadFilters();
            applyFilters();
        });
    </script>
}
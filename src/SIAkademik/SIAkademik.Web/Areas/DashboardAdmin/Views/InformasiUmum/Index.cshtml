@using SIAkademik.Web.Areas.DashboardAdmin.Models.InformasiUmumModels
@model EditVM

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Profil</a></li>
            <li class="breadcrumb-item" aria-current="page">Informasi Umum</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card card-warning">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Informasi Umum SMAKr Pandhega Jaya</h4>
                </div>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">

                    <div class="card-body d-flex" style="flex-direction: column;">
                        <div asp-validation-summary="ModelOnly"></div>


                        <div class="d-flex justify-content-between mb-3 mr-3">
                            <div class="mb-0 rounded" style="background-color: #d9edf7; font-weight: 400; padding: 15px; color: #31708f;">
                                <p class="mb-0">Tekan Tombol "Edit Informasi" untuk mulai mengedit informasi yang tersedia</p>
                            </div>
                            <div class="mb-0">
                                <a asp-action="Edit" class="btn btn-warning">Edit Informasi</a>
                            </div>
                        </div>





                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="identitas-tab" data-toggle="tab" href="#pertama" role="tab"
                                   aria-controls="identitas" aria-selected="true">Identitas Sekolah</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="yayasan-tab" data-toggle="tab" href="#kedua" role="tab"
                                   aria-controls="yayasan" aria-selected="false">Sambutan & Struktur Yayasan</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="visi-tab" data-toggle="tab" href="#ketiga" role="tab"
                                   aria-controls="visi" aria-selected="false">Visi, Misi, & Mars</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="medsos-tab" data-toggle="tab" href="#keempat" role="tab"
                                   aria-controls="medsos" aria-selected="false">Media Sosial & Kontak</a>
                            </li>
                        </ul>

                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="pertama" role="tabpanel" aria-labelledby="home-tab">
                                <div class="section-title mt-0">
                                    Identitas Sekolah
                                </div>
                                <div class="d-flex">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.NamaSekolah"></label>
                                            <input asp-for="@Model.NamaSekolah" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.SloganSekolah"></label>
                                            <textarea asp-for="@Model.SloganSekolah" style="min-height: 120px" class="form-control" readonly></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.LogoSekolahBaru"></label>
                                            <div style="display: flex; justify-content: center;">
                                                <img style="width: 150px;" src="@Model.LogoSekolahLama.OriginalString" />
                                            </div>
                                            
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.AlamatSekolah"></label>
                                            <textarea asp-for="@Model.AlamatSekolah" class="form-control" readonly></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.ProfilSingkatSekolah"></label>
                                            <textarea asp-for="@Model.ProfilSingkatSekolah" style="min-height: 120px" class="form-control" readonly></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.VideoHalamanBeranda">Video Sambutan</label>
                                            <div style="display: flex; justify-content: center;">
                                                <iframe src="@Model.VideoHalamanBeranda"></iframe>
                                            </div>                                  
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="kedua" role="tabpanel" aria-labelledby="yayasan-tab">
                                <div class="section-title mt-0">
                                    Sambutan & Struktur Yayasan
                                </div>
                                <div class="d-flex">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.NamaYayasan"></label>
                                            <input asp-for="@Model.NamaYayasan" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.DewanPembinaYayasan"></label>
                                            <input asp-for="@Model.DewanPembinaYayasan" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.SambutanPimpinanYayasan"></label>
                                            <textarea asp-for="@Model.SambutanPimpinanYayasan" style="min-height: 200px" class="form-control" readonly></textarea>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.KetuaUmumYayasan"></label>
                                            <input asp-for="@Model.KetuaUmumYayasan" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.KetuaUmum2Yayasan"></label>
                                            <input asp-for="@Model.KetuaUmum2Yayasan" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.VideoHalamanTentangKami"></label>
                                            <div style="display: flex; justify-content: center;">
                                                <iframe src="@Model.VideoHalamanTentangKami"></iframe>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="ketiga" role="tabpanel" aria-labelledby="visi-tab">
                                <div class="section-title mt-0">
                                    Visi, Misi, & Mars
                                </div>
                                <div class="">
                                    <div class="form-group">
                                        <label asp-for="@Model.VisiSekolah"></label>
                                        <div class="p-2" style="background-color:#e9ecef;border-color:#e4e6fc;border:1px solid #ced4da">
                                            @Html.Raw(Model.VisiSekolah)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="@Model.MisiSekolah"></label>
                                        <div class="p-2" style="background-color:#e9ecef;border-color:#e4e6fc;border:1px solid #ced4da">
                                            @Html.Raw(Model.MisiSekolah)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="@Model.LirikMarsSekolah"></label>
                                        <div class="p-2" style="background-color:#e9ecef;border-color:#e4e6fc;border:1px solid #ced4da">
                                            @Html.Raw(Model.LirikMarsSekolah)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="keempat" role="tabpanel" aria-labelledby="medsos-tab">
                                <div class="section-title mt-0">
                                    Media Sosial & Kontak
                                </div>
                                <div class="d-flex">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.InstagramSekolah"></label>
                                            <input asp-for="@Model.InstagramSekolah" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.FacebookSekolah"></label>
                                            <input asp-for="@Model.FacebookSekolah" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.FacebookSekolah"></label>
                                            <input asp-for="@Model.FacebookSekolah" class="form-control" readonly />
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.NoHPSekolah"></label>
                                            <input asp-for="@Model.NoHPSekolah" class="form-control" readonly />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.EmailSekolah"></label>
                                            <input asp-for="@Model.EmailSekolah" class="form-control" readonly />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>













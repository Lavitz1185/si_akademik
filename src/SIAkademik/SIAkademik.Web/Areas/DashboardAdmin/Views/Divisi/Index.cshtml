@model List<Divisi>

@{
    ViewData["Title"] = "Divisi";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen SDM</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Divisi" asp-action="Index"></a>Divisi</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Divisi</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-3">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Divisi">
                    <i class="fas fa-plus"></i> Tambah Data
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table full-table table-striped table-hover table-export">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Jumlah Guru/Pegawai</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var divisi in Model)
                    {
                        <tr>
                            <td>@divisi.Nama</td>
                            <td>@divisi.DaftarPegawai.Count</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@divisi.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit Divisi"><i class="fas fa-pencil-alt"></i></a>
                                <form asp-action="Hapus" asp-route-id="@divisi.Id" method="post" style="display:inline">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Divisi"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
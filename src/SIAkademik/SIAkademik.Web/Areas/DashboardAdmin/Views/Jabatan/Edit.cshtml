@using SIAkademik.Web.Areas.DashboardAdmin.Models.JabatanModels
@model EditVM

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card card-warning">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Edit Data Jabatan</h4>
                </div>

                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label asp-for="@Model.Id"></label>
                            <input asp-for="@Model.Id" readonly class="form-control"/>
                            <span asp-validation-for="@Model.Id"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Nama"></label>
                            <input asp-for="@Model.Nama" class="form-control" />
                            <span asp-validation-for="@Model.Nama"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Jenis"></label>
                            <select asp-for="@Model.Jenis" class="form-control">
                                @foreach (var jenis in Enum.GetValues<JenisJabatan>())
                                {
                                    <option value="@jenis">@jenis.Humanize()</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.Jenis"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
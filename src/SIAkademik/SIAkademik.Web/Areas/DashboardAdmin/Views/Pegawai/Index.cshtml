@using SIAkademik.Web.Areas.DashboardAdmin.Models.PegawaiModels
@model IndexVM

@inject IDivisiRepository DivisiRepository
@inject IJabatanRepository JabatanRepository

@{
    var daftarJabatan = await JabatanRepository.GetAll();
    var daftarDivisi = await DivisiRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen SDM</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Pegawai" asp-action="Index"></a>Guru & Tendik</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Guru & Tenaga Kependidikan</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-beetwen mb-3">
            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary mr-1" asp-action="Tambah" data-toggle="tooltip" title="Tambah Guru/Tendik">
                    <i class="fas fa-plus"></i> Tambah Guru/Tendik
                </a>

                <a class="btn btn-icon icon-left btn-success" data-toggle="tooltip" title="Import Data Guru/Tendik">
                    <i class="fas fa-file-upload"></i> Import Data Guru/Tendik
                </a>
            </div>

            <div class="d-flex justify-content-center align-items-center pr-3 ml-auto">
                <div class="mb-0 mr-2">
                    <button class="btn btn-icon icon-left btn-info" id="toggleFilter">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>

                <div class="mb-0">
                    <a href="" class="btn btn-icon icon-left btn-success" id="refreshButton">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </a>
                </div>
            </div>                      
        </div>

        <!-- Panel Filter -->
        <form asp-action="Index" method="post">
            <div id="filterPanel" class="card p-3 mb-4" @(Model.Agama.Any(a => a.Selected) || Model.JenisKelamin.Any(a => a.Selected) || Model.Divisi.Any(a => a.Selected) || Model.Jabatan.Any(a => a.Selected) || Model.GolonganDarah.Any(a => a.Selected) || Model.StatusPerkawinan.Any(a => a.Selected) || Model.TahunLahir.Any(a => a.Selected) || Model.TahunMasuk.Any(a => a.Selected) ? "" : "style=display:none")>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <h6>Jenis Kelamin</h6>
                        @for (int i = 0; i < Model.JenisKelamin.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.JenisKelamin[@i].Selected">
                                <input asp-for="@Model.JenisKelamin[@i].Value" readonly hidden> 
                                @Model.JenisKelamin[i].Value.Humanize()
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Agama</h6>
                        @for (int i = 0; i < Model.Agama.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.Agama[@i].Selected">
                                <input asp-for="@Model.Agama[@i].Value" readonly hidden> 
                                @Model.Agama[i].Value.Humanize()
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Status Perkawinan</h6>
                        @for (int i = 0; i < Model.StatusPerkawinan.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.StatusPerkawinan[@i].Selected">
                                <input asp-for="@Model.StatusPerkawinan[@i].Value" readonly hidden> 
                                @Model.StatusPerkawinan[i].Value.Humanize()
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Golongan Darah</h6>
                        @for (int i = 0; i < Model.GolonganDarah.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.GolonganDarah[@i].Selected">
                                <input asp-for="@Model.GolonganDarah[@i].Value" readonly hidden> 
                                @Model.GolonganDarah[i].Value.Humanize()
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Jabatan</h6>
                        @for (int i = 0; i < Model.Jabatan.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.Jabatan[@i].Selected">
                                <input asp-for="@Model.Jabatan[@i].Value" readonly hidden> 
                                @daftarJabatan.First(a => a.Id == Model.Jabatan[i].Value).Nama
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Divisi</h6>
                        @for (int i = 0; i < Model.Divisi.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.Divisi[@i].Selected">
                                <input asp-for="@Model.Divisi[@i].Value" readonly hidden> 
                                @daftarDivisi.First(a => a.Id == Model.Divisi[i].Value).Nama
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Tahun Masuk</h6>
                        @for (int i = 0; i < Model.TahunMasuk.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.TahunMasuk[@i].Selected">
                                <input asp-for="@Model.TahunMasuk[@i].Value" readonly hidden>
                                @Model.TahunMasuk[i].Value
                            </div>
                        }
                    </div>

                    <div class="col-md-3 mb-3">
                        <h6>Tahun Lahir</h6>
                        @for (int i = 0; i < Model.TahunLahir.Count; i++)
                        {
                            <div>
                                <input type="checkbox" class="submit-on-change" asp-for="@Model.TahunLahir[@i].Selected">
                                <input asp-for="@Model.TahunLahir[@i].Value" readonly hidden>
                                @Model.TahunLahir[i].Value
                            </div>
                        }
                    </div>
                </div>

                <div class="text-right">
                    <a class="btn btn-secondary btn-sm" asp-action="Index">Reset</a>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="save-stage2">
                <thead>
                    <tr>
                        <th style="min-width: 100px">NIP</th>
                        <th style="min-width: 180px">Nama Lengkap</th>
                        <th style="min-width: 150px">Jenis Kelamin</th>
                        <th style="min-width: 150px">Agama</th>
                        <th style="min-width: 150px">TTL</th>
                        <th style="min-width: 120px">Status Perkawinan</th>
                        <th style="min-width: 250px">Alamat (KTP)</th>
                        <th>No. HP</th>
                        <th style="min-width: 100px">Gol. Darah</th>
                        <th style="min-width: 130px">Tanggal Masuk</th>
                        <th>NIK</th>
                        <th style="min-width: 150px">Nama Instagram</th>
                        <th style="min-width: 150px">Email</th>
                        <th>No. Rekening</th>
                        <th>Divisi</th>
                        <th>Jabatan</th>
                        <th style="min-width: 80px !important">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DaftarPegawai)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nama</td>
                            <td>@item.JenisKelamin.Humanize()</td>
                            <td>@item.Agama.Humanize(LetterCasing.Title)</td>
                            <td>@item.TTL</td>
                            <td>@item.StatusPerkawinan.Humanize()</td>
                            <td>@item.AlamatKTP</td>
                            <td>@item.NoHP.Value</td>
                            <td>@item.GolonganDarah.Humanize()</td>
                            <td>@item.TanggalMasuk.ToString(CultureInfos.CI.DateTimeFormat.ShortDatePattern, CultureInfos.CI)</td>
                            <td>@item.NIK</td>
                            <td>@item.NamaInstagram</td>
                            <td>@item.Email</td>
                            <td>@item.NoRekening</td>
                            <td>@item.Divisi.Nama</td>
                            <td>@item.Jabatan.Nama</td>
                            <td>
                                <a asp-action="Edit" asp-route-nip="@item.Id" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="Edit Guru/Tendik">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form style="display:inline" asp-action="Hapus" asp-route-nip="@item.Id" method="post">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Guru/Tendik">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ✅ Cegah error reinit
            let table = $("#save-stage2").DataTable({
                "scrollX": true,
                stateSave: true, // simpan posisi halaman
                pageLength: 10
            });

            const $filterPanel = $("#filterPanel");
            const $rows = $("#save-stage2 tbody tr");

            // Tombol toggle filter
            $("#toggleFilter").on("click", function () {
                $filterPanel.slideToggle(200);
            });

            // === Fungsi simpan & muat filter dari localStorage ===
            const filterKey = "pegawaiFilters";

            function saveFilters() {
                const selectedFilters = {};
                $(".filter:checked").each(function () {
                    const category = $(this).data("filter");
                    if (!selectedFilters[category]) selectedFilters[category] = [];
                    selectedFilters[category].push($(this).val());
                });
                localStorage.setItem(filterKey, JSON.stringify(selectedFilters));
            }

            function loadFilters() {
                const saved = localStorage.getItem(filterKey);
                if (!saved) return;
                const filters = JSON.parse(saved);

                // Centang checkbox sesuai data tersimpan
                for (const [category, values] of Object.entries(filters)) {
                    values.forEach(val => {
                        $(`.filter[data-filter="${category}"][value="${val}"]`).prop("checked", true);
                    });
                }
            }

            function applyFilters() {
                const filters = {};

                $(".filter:checked").each(function () {
                    const category = $(this).data("filter");
                    const value = $(this).val().toLowerCase();

                    if (!filters[category]) filters[category] = [];
                    filters[category].push(value);
                });

                // Custom filtering DataTables
                $.fn.dataTable.ext.search = []; // hapus filter lama

                $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
                    // data[] berisi isi kolom berdasarkan urutan th
                    const jenisKelamin = data[2].toLowerCase();
                    const agama = data[3].toLowerCase();
                    const statusPerkawinan = data[5].toLowerCase();
                    const tahunMasuk = data[9].toLowerCase();
                    const divisi = data[14].toLowerCase();

                    // periksa tiap kategori filter
                    for (const [category, values] of Object.entries(filters)) {
                        if (values.length === 0) continue;

                        let cellValue = "";
                        if (category === "jenisKelamin") cellValue = jenisKelamin;
                        if (category === "agama") cellValue = agama;
                        if (category === "statusPerkawinan") cellValue = statusPerkawinan;
                        if (category === "tahunMasuk") cellValue = tahunMasuk;
                        if (category === "divisi") cellValue = divisi;

                        if (!values.some(v => cellValue.includes(v))) {
                            return false; // baris ini tidak cocok
                        }
                    }

                    return true; // cocok semua filter
                });

                table.draw(); // refresh tampilan DataTable

                // Simpan ke localStorage
                saveFilters();
            }

            // Jalankan saat ada perubahan checkbox
            $(".filter").on("change", applyFilters);

            // Reset filter
            $("#resetFilter").on("click", function () {
                $(".filter").prop("checked", false);
                $.fn.dataTable.ext.search = []; // hapus semua filter custom
                table.search('').columns().search('').draw(); // refresh semua data
                localStorage.removeItem(filterKey);
            });

            // Muat filter tersimpan saat awal
            loadFilters();
            applyFilters();
        });
    </script>
}

@model List<TahunAjaran>

@{
    ViewData["Title"] = "Tahun Ajaran";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="TahunAjaran" asp-action="Index"></a>Tahun Ajaran</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Daftar Tahun Ajaran</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-3">

            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Tahun Ajaran">
                    <i class="fas fa-plus"></i> Tambah Data
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun">
                <thead>
                    <tr>
                        <th>Periode</th>
                        <th>Tahun</th>
                        <th>Semester</th>
                        <th>Tanggal Mulai</th>
                        <th>Tanggal Selesai</th>
                        <th>Jumlah Rombel</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tahunAjaran in Model)
                    {
                        <tr>
                            <td>@tahunAjaran.Periode</td>
                            <td>@tahunAjaran.Tahun</td>
                            <td>@tahunAjaran.Semester.Humanize()</td>
                            <td>@tahunAjaran.TanggalMulai.ToString(CultureInfos.CI.DateTimeFormat.ShortDatePattern, CultureInfos.CI)</td>
                            <td>@tahunAjaran.TanggalSelesai.ToString(CultureInfos.CI.DateTimeFormat.ShortDatePattern, CultureInfos.CI)</td>
                            <td>@tahunAjaran.DaftarRombel.Count</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@tahunAjaran.Id" class="btn btn-primary btn-action" data-toggle="tooltip" title="Edit Tahun Ajaran">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form asp-action="Hapus" asp-route-id="@tahunAjaran.Id" method="post" style="display:inline">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Tahun Ajaran">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@using SIAkademik.Web.Areas.DashboardAdmin.Models.SiswaModels
@model NaikKelasVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Peserta Didik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Siswa" asp-action="NaikKelas" asp-route-jenjang="@Model.jenjang"></a>Naik Kelas</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Proses Naik Kelas</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-2">
            <div class="mb-0">
                <form asp-action="NaikKelas" method="get" class="d-flex align-items-center" style="gap: 8px;">
                    <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Pilih Tahun Ajaran:</label>
                    <select asp-for="@Model.IdTahunAjaran" class="form-control submit-on-change form-control-sm w-auto">
                        @if (Model.IdTahunAjaran is null)
                        {
                            <option value="@null">-- Pilih Tahun Ajaran --</option>
                        }

                        @foreach (var tahunAjaran in daftarTahunAjaran)
                        {
                            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                        }
                    </select>

                    <label asp-for="@Model.jenjang" class="mb-0" style="font-weight: 600;">Pilih Jenjang Saat Ini:</label>
                    <select asp-for="@Model.jenjang" class="form-control submit-on-change form-control-sm w-auto">
                        <option value="@Jenjang.X">@Jenjang.X.Humanize()</option>
                        <option value="@Jenjang.XI">@Jenjang.XI.Humanize()</option>
                    </select>
                </form>
            </div>
        </div>

        <form asp-action="NaikKelas" id="naikKelas" asp-route-jenjang="@Model.jenjang" asp-route-idTahunAjaran="@Model.IdTahunAjaran">
            <div class="d-flex justify-content-between align-items-start ml-auto mb-3 flex-wrap">
                <!-- Pilih Jenjang Tujuan -->
                <div class="d-flex align-items-center mb-2 mb-md-0" style="gap: 8px;">
                    <label asp-for="@Model.JenjangTujuan" class="mb-0" style="min-width:140px; font-weight: 600;">Pilih Jenjang Tujuan:</label>
                    <select asp-for="@Model.JenjangTujuan" class="form-control form-control-sm w-auto">
                        @if (Model.jenjang == Jenjang.X)
                        {
                            <option value="@Jenjang.XI">@Jenjang.XI.Humanize()</option>
                            <option value="@Jenjang.XII">@Jenjang.XII.Humanize()</option>
                        }
                        else
                        {
                            <option value="@Jenjang.XII">@Jenjang.XII.Humanize()</option>
                        }
                    </select>
                </div>

                <!-- Tombol Simpan + Info Jumlah -->
                <div class="d-flex flex-column align-items-end pr-3">
                    <button type="submit" class="btn btn-primary mb-1" disabled data-toggle="tooltip" title="Simpan Perubahan Kenaikan Kelas">
                        <i class="fas fa-save"></i> Simpan
                    </button>

                    <!-- Info jumlah dipilih -->
                    <div>
                        <span id="selectedCount" class="fw-semibold text-black-50">0</span> dari
                        <span id="totalCount"></span> data dipilih
                    </div>
                </div>
            </div>



            <div class="table-responsive">
                <input asp-for="@Model.jenjang" hidden readonly />
                <table class="table table-striped table-hover" id="save-stage1">
                    <thead>
                        <tr>
                            <th style="min-width: 60px; text-align: center;">
                                <input id="pilihSemua" class="select-all" type="checkbox" style="cursor:pointer;" />
                            </th>
                            <th>Id</th>
                            <th>NISN</th>
                            <th>NIS</th>
                            <th style="min-width: 200px">Nama</th>
                            <th>Agama</th>
                            <th>Jenis Kelamin</th>
                            <th style="min-width: 100px">TTL</th>
                            <th>Tanggal Masuk</th>
                            <th>Status Aktif</th>
                            <th>Jenjang</th>
                            <th style="min-width: 100px">Biodata Lengkap?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.DaftarSiswa.Count; i++)
                        {
                            var siswa = Model.DaftarSiswa[i];
                            <tr>
                                <td style="text-align: center; padding-right: 28px;">
                                    <input asp-for="@Model.DaftarEntry[@i].NaikKelas" data-checkbox-all="#pilihSemua" type="checkbox" />
                                    <input asp-for="@Model.DaftarEntry[@i].IdSiswa" hidden readonly />
                                </td>
                                <td>@siswa.Id</td>
                                <td>@siswa.NISN</td>
                                <td>@siswa.NIS</td>
                                <td>@siswa.Nama</td>
                                <td>@siswa.Agama.Humanize(LetterCasing.Title)</td>
                                <td>@siswa.JenisKelamin.Humanize()</td>
                                <td>@siswa.TTL</td>
                                <td>@siswa.TanggalMasuk.ToString(CultureInfos.CI.DateTimeFormat.ShortDatePattern, CultureInfos.CI)</td>
                                <td>@siswa.StatusAktif.Humanize()</td>
                                <td>@siswa.Jenjang.Humanize()</td>
                                <td>
                                    @if (siswa.IsBiodataComplete())
                                    {
                                        @("Lengkap")
                                    }
                                    else
                                    {
                                        @("Tidak Lengkap")
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#save-stage1').DataTable();

            // === 🧮 Fungsi untuk update jumlah terpilih ===
            function updateSelectedCount() {
                var total = table.rows().nodes().to$().find('input[type="checkbox"][data-checkbox-all]').length;
                var checked = table.rows().nodes().to$().find('input[type="checkbox"][data-checkbox-all]:checked').length;

                $('#selectedCount').text(checked);
                $('#totalCount').text(total);

                // ✅ Aktif/nonaktif tombol simpan
                if (checked > 0) {
                    $('button[type="submit"]').prop('disabled', false);
                } else {
                    $('button[type="submit"]').prop('disabled', true);
                }
            }

            // --- 1️⃣ Saat klik "Pilih Semua"
            $('#pilihSemua').on('click', function () {
                var isChecked = $(this).is(':checked');

                table.rows().nodes().to$().each(function () {
                    $(this).find('input[type="checkbox"][data-checkbox-all]').prop('checked', isChecked);
                });

                table.rows().every(function () {
                    var $checkbox = $(this.node()).find('input[type="checkbox"][data-checkbox-all]');
                    $checkbox.prop('checked', isChecked);
                });

                updateSelectedCount();
            });

            // --- 2️⃣ Saat user centang / uncheck salah satu checkbox siswa
            $('#save-stage1').on('change', 'input[type="checkbox"][data-checkbox-all]', function () {
                var allCheckboxes = table.rows().nodes().to$().find('input[type="checkbox"][data-checkbox-all]');
                var total = allCheckboxes.length;
                var checked = allCheckboxes.filter(':checked').length;

                if (checked === total) {
                    $('#pilihSemua').prop('checked', true).prop('indeterminate', false);
                } else if (checked === 0) {
                    $('#pilihSemua').prop('checked', false).prop('indeterminate', false);
                } else {
                    $('#pilihSemua').prop('indeterminate', true);
                }

                updateSelectedCount();
            });

            // --- 3️⃣ Pastikan status centang tetap sinkron meski berpindah page
            table.on('draw', function () {
                var globalChecked = $('#pilihSemua').prop('checked');
                var isIndeterminate = $('#pilihSemua').prop('indeterminate');

                table.rows({ page: 'current' }).nodes().to$().find('input[type="checkbox"][data-checkbox-all]').each(function () {
                    if (!isIndeterminate) {
                        $(this).prop('checked', globalChecked);
                    }
                });

                updateSelectedCount();
            });

            // 🔄 Jalankan pertama kali saat halaman selesai load
            updateSelectedCount();
        });

    </script>
}
@using SIAkademik.Web.Areas.DashboardAdmin.Models.SiswaModels
@model NaikKelasVM

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Manajemen Peserta Didik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Siswa" asp-action="NaikKelas" asp-route-jenjang="@Model.jenjang"></a>Naik Kelas</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <div class="card-header">
        <h4>Proses Naik Kelas</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-2">
            <div class="mb-0">
                <form asp-action="NaikKelas" method="get" class="d-flex align-items-center" style="gap: 8px;">
                    <label asp-for="@Model.jenjang" class="mb-0" style="font-weight: 600;">Pilih Jenjang Saat Ini:</label>
                    <select asp-for="@Model.jenjang" class="form-control form-control-sm w-auto">
                        <option value="@Jenjang.X">@Jenjang.X.Humanize()</option>
                        <option value="@Jenjang.XI">@Jenjang.XI.Humanize()</option>
                    </select>
                </form>
            </div>
        </div>

        <form asp-action="NaikKelas" id="naikKelas" asp-route-jenjang="@Model.jenjang">
            <div class="d-flex justify-content-between ml-auto mb-3">
                <div class="d-flex align-items-center" style="gap: 8px;">
                    <label asp-for="@Model.JenjangTujuan" class="mb-0" style="font-weight: 600; min-width:140px;">Pilih Jenjang Tujuan:</label>
                    <select asp-for="@Model.JenjangTujuan" class="form-control form-control-sm w-auto">
                        @if(Model.jenjang == Jenjang.X)
                        {
                            <option value="@Jenjang.XI">@Jenjang.XI.Humanize()</option>
                            <option value="@Jenjang.XII">@Jenjang.XII.Humanize()</option>
                        }
                        else
                        {
                            <option value="@Jenjang.XII">@Jenjang.XII.Humanize()</option>
                        }
                    </select>
                </div>

                <div class="ml-3">
                    <button type="submit" class="btn btn-primary" data-toggle="tooltip" title="Simpan Perubahan Kenaikan Kelas"><i class="fas fa-save"></i> Simpan</button>
                </div>
            </div>


            <div class="table-responsive">
                <input asp-for="@Model.jenjang" hidden readonly />
                <table class="table table-striped table-hover" id="save-stage">
                    <thead>
                        <tr>
                            <th style="min-width: 60px; text-align: center;">
                                <input id="pilihSemua" type="checkbox" style="cursor:pointer;" />
                            </th>
                            <th>Id</th>
                            <th>NISN</th>
                            <th>NIS</th>
                            <th style="min-width: 200px">Nama</th>
                            <th>Agama</th>
                            <th>Jenis Kelamin</th>
                            <th style="min-width: 100px">TTL</th>
                            <th>Tanggal Masuk</th>
                            <th>Status Aktif</th>
                            <th>Jenjang</th>
                            <th style="min-width: 100px">Biodata Lengkap?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.DaftarSiswa.Count; i++)
                        {
                            var siswa = Model.DaftarSiswa[i];
                            <tr>
                                <td style="text-align: center; padding-right: 28px;">
                                    <input asp-for="@Model.DaftarEntry[@i].NaikKelas" type="checkbox" />
                                    <input asp-for="@Model.DaftarEntry[@i].IdSiswa" hidden readonly />
                                </td>
                                <td>@siswa.Id</td>
                                <td>@siswa.NISN</td>
                                <td>@siswa.NIS</td>
                                <td>@siswa.Nama</td>
                                <td>@siswa.Agama.Humanize()</td>
                                <td>@siswa.JenisKelamin.Humanize()</td>
                                <td>@siswa.TTL</td>
                                <td>@siswa.TanggalMasuk.ToString(CultureInfos.CI.DateTimeFormat.ShortDatePattern, CultureInfos.CI)</td>
                                <td>@siswa.StatusAktif.Humanize()</td>
                                <td>@siswa.Jenjang.Humanize()</td>
                                <td>
                                    @if (siswa.IsBiodataComplete())
                                    {
                                        @("Lengkap")
                                    }
                                    else
                                    {
                                        @("Tidak Lengkap")
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('select#jenjang').on('change', function() {
                $(this).closest('form').trigger('submit');
            });

            $('input#pilihSemua[type="checkbox"]').on('change', function() {
               const checked = $(this).is(':checked');
               $('form#naikKelas input[type="checkbox"]').each(function() {
                   $(this).attr('checked', checked)
               });
            });
        })
    </script>
}
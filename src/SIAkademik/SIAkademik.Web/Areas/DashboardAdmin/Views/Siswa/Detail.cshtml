@using SIAkademik.Web.Areas.DashboardAdmin.Models.SiswaModels
@model DetailVM

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Peserta Didik</a></li>
            <li class="breadcrumb-item">
                @{
                    var url = Url.ActionLink("Index", "Siswa", values: new
                    {
                        jenisKelamin = Model.JenisKelamin,
                        agama = Model.Agama,
                        statusAktif = Model.StatusAktif,
                        tahunMasuk = Model.TahunMasuk,
                        tahunLahir = Model.TahunLahir,
                        jenjang = Model.Jenjang
                    });
                }

                <a href="@url">
                    Siswa
                </a>
            </li>
            <li class="breadcrumb-item">Detail</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card card-success">
                <div class="card-header" style="padding-top: 20px;">
                    <h4>Tambah Data Siswa</h4>
                </div>


                <div class="card-body d-flex">
                    <div class="col-6 p-0">
                        <div class="form-group">
                            <label>NISN</label>
                            <input value="@Model.Siswa.NISN" type="text" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Nama</label>
                            <input value="@Model.Siswa.Nama" type="text" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Tempat Lahir</label>
                            <input value="@Model.Siswa.TempatLahir" type="text" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Agama</label>
                            <input value="@Model.Siswa.Agama.Humanize(LetterCasing.Title)" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Tanggal Masuk</label>
                            <input value="@Model.Siswa.TanggalMasuk.ToString("dd MMMM yyyy", CultureInfos.CI)" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label>NIS</label>
                            <input value="@Model.Siswa.NIS" type="text" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Jenis Kelamin</label>
                            <input value="@Model.Siswa.JenisKelamin.Humanize()" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Tempat/Tanggal Lahir</label>
                            <input class="form-control" value="@Model.Siswa.TempatLahir/@Model.Siswa.TanggalLahir.ToString("dd MMMM yyyy", CultureInfos.CI)" readonly/>
                        </div>

                        <div class="form-group">
                            <label>Jenjang</label>
                            <input value="@Model.Siswa.Jenjang.Humanize()" class="form-control" readonly/>
                        </div>

                        <div class="form-group">
                            <label>Status Aktif</label>
                            <input value="@Model.Siswa.StatusAktif.Humanize()" class="form-control" readonly/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
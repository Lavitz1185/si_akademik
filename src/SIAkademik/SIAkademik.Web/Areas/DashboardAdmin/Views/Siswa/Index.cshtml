@using SIAkademik.Web.Areas.DashboardAdmin.Models.SiswaModels
@model IndexVM

@{
    ViewData["Title"] = "Siswa";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Manajemen Peserta Didik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardAdmin" asp-controller="Siswa" asp-action="Index"></a>Siswa</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <!-- Judul -->
    <div class="card-header">
        <h4>Daftar Siswa</h4>
    </div>
    <div class="padding-20">        

        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <a class="btn btn-icon icon-left btn-primary mr-1" asp-action="Tambah"
                   data-toggle="tooltip" title="Tambah Data Siswa Baru">
                    <i class="fas fa-plus"></i> Tambah Data
                </a>

                <a asp-action="Siswa" asp-controller="Import" class="btn btn-icon icon-left btn-success" data-toggle="tooltip" title="Import Data Siswa">
                    <i class="fas fa-file-upload"></i> Import Data
                </a>
            </div>

            <div class="d-flex justify-content-center align-items-center pr-3 ml-auto">
                <div class="mb-0 mr-2">
                    <button class="btn btn-icon icon-left btn-info" id="toggleFilter">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>

                <div class="mb-0">
                    <a href="" class="btn btn-icon icon-left btn-success" id="refreshButton">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </a>
                </div>
            </div>
        </div>

        <!-- Panel Filter -->
        <form asp-action="Index" method="post">
            <div id="filterPanel" class="p-3 mb-4"
            @(Model.Agama.Any(a => a.Selected) || Model.StatusAktif.Any(a => a.Selected) || Model.Jenjang.Any(a => a.Selected) || Model.JenisKelamin.Any(a => a.Selected) || Model.TahunLahir.Any(a => a.Selected) || Model.TahunMasuk.Any(a => a.Selected) ? "" : "style=display:none")>

                <div class="row g-3 mb-3">
                    <!-- Jenis Kelamin -->
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0;">
                            <div class="card-body p-2">
                                <h6 class="fw-bold border-bottom pb-1 mb-2 text-center" style="font-size: 1.1rem">Jenis Kelamin</h6>
                                <div class="filter-scroll-content">
                                    @for (int i = 0; i < Model.JenisKelamin.Count; i++)
                                    {
                                        <div class="form-check mb-1">
                                            <input type="checkbox" class="form-check-input submit-on-change" asp-for="@Model.JenisKelamin[@i].Selected">
                                            <label class="form-check-label" style="font-size: 0.9rem">@Model.JenisKelamin[i].Value.Humanize()</label>
                                            <input asp-for="@Model.JenisKelamin[@i].Value" hidden />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Agama -->
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0;">
                            <div class="card-body p-2">
                                <h6 class="fw-bold border-bottom pb-1 mb-2 text-center" style="font-size: 1.1rem">Agama</h6>
                                <div class="filter-scroll-content">
                                    @for (int i = 0; i < Model.Agama.Count; i++)
                                    {
                                        <div class="form-check mb-1">
                                            <input type="checkbox" class="form-check-input submit-on-change" asp-for="@Model.Agama[@i].Selected">
                                            <label class="form-check-label" style="font-size: 0.9rem">@Model.Agama[i].Value.Humanize(LetterCasing.Title)</label>
                                            <input asp-for="@Model.Agama[@i].Value" hidden />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status Aktif -->
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0;">
                            <div class="card-body p-2">
                                <h6 class="fw-bold border-bottom pb-1 mb-2 text-center" style="font-size: 1.1rem">Status Aktif</h6>
                                <div class="filter-scroll-content">
                                    @for (int i = 0; i < Model.StatusAktif.Count; i++)
                                    {
                                        <div class="form-check mb-1">
                                            <input type="checkbox" class="form-check-input submit-on-change" asp-for="@Model.StatusAktif[@i].Selected">
                                            <label class="form-check-label" style="font-size: 0.9rem">@Model.StatusAktif[i].Value.Humanize()</label>
                                            <input asp-for="@Model.StatusAktif[@i].Value" hidden />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-3">

                    <!-- Tahun Masuk -->
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0;">
                            <div class="card-body p-2">
                                <h6 class="fw-bold border-bottom pb-1 mb-2 text-center" style="font-size: 1.1rem">Tahun Masuk</h6>
                                <div class="filter-scroll-content">
                                    @for (int i = 0; i < Model.TahunMasuk.Count; i++)
                                    {
                                        <div class="form-check mb-1">
                                            <input type="checkbox" class="form-check-input submit-on-change" asp-for="@Model.TahunMasuk[@i].Selected">
                                            <label class="form-check-label" style="font-size: 0.9rem">@Model.TahunMasuk[i].Value</label>
                                            <input asp-for="@Model.TahunMasuk[@i].Value" hidden />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tahun Lahir -->
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0;">
                            <div class="card-body p-2">
                                <h6 class="fw-bold border-bottom pb-1 mb-2 text-center" style="font-size: 1.1rem">Tahun Lahir</h6>
                                <div class="filter-scroll-content">
                                    @for (int i = 0; i < Model.TahunLahir.Count; i++)
                                    {
                                        <div class="form-check mb-1">
                                            <input type="checkbox" class="form-check-input submit-on-change" asp-for="@Model.TahunLahir[@i].Selected">
                                            <label class="form-check-label" style="font-size: 0.9rem">@Model.TahunLahir[i].Value</label>
                                            <input asp-for="@Model.TahunLahir[@i].Value" hidden />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Jenjang -->
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0;">
                            <div class="card-body p-2">
                                <h6 class="fw-bold border-bottom pb-1 mb-2 text-center" style="font-size: 1.1rem">Jenjang</h6>
                                <div class="filter-scroll-content">
                                    @for (int i = 0; i < Model.Jenjang.Count; i++)
                                    {
                                        <div class="form-check mb-1">
                                            <input type="checkbox" class="form-check-input submit-on-change" asp-for="@Model.Jenjang[@i].Selected">
                                            <label class="form-check-label" style="font-size: 0.9rem">@Model.Jenjang[i].Value.Humanize()</label>
                                            <input asp-for="@Model.Jenjang[@i].Value" hidden />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex">
                    <div class="text-end mt-3 ml-auto">
                        <a class="btn btn-secondary btn-sm" asp-action="Index">Reset</a>
                    </div>
                </div>
            </div>
        </form>

        <!-- Tabel -->
        <div class="table-responsive">
            <table class="table table-striped" id="save-stage">
                <thead>
                    <tr>
                        <th style="min-width: 100px">Id</th>
                        <th style="min-width: 100px">NISN</th>
                        <th style="min-width: 100px">NIS</th>
                        <th style="min-width: 200px">Nama</th>
                        <th style="min-width: 100px">Agama</th>
                        <th style="min-width: 100px">Jenis Kelamin</th>
                        <th style="min-width: 100px">TTL</th>
                        <th style="min-width: 100px">Tanggal Masuk</th>
                        <th style="min-width: 100px">Status Aktif</th>
                        <th style="min-width: 100px">Jenjang</th>
                        <th style="min-width: 100px">Biodata Lengkap?</th>
                        <th style="min-width: 130px">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var siswa in Model.DaftarSiswa)
                    {
                        <tr>
                            <td>@siswa.Id</td>
                            <td>@siswa.NISN</td>
                            <td>@siswa.NIS</td>
                            <td>@siswa.Nama</td>
                            <td>@siswa.Agama.Humanize(LetterCasing.Title)</td>
                            <td>@siswa.JenisKelamin.Humanize()</td>
                            <td>@siswa.TTL</td>
                            <td>@siswa.TanggalMasuk.ToString(CultureInfos.CI.DateTimeFormat.ShortDatePattern, CultureInfos.CI)</td>
                            <td>@siswa.StatusAktif.Humanize()</td>
                            <td>@siswa.Jenjang.Humanize()</td>
                            <td>
                                @if (siswa.IsBiodataComplete())
                                {
                                    @("Lengkap")
                                }
                                else
                                {
                                    @("Tidak Lengkap")
                                }
                            </td>
                            <td>
                                @{
                                    var url = Url.ActionLink("Detail", values:new
                                    {
                                        id = siswa.Id,
                                        jenisKelamin = Model.JenisKelamin.Selected(),
                                        agama = Model.Agama.Selected(),
                                        statusAktif = Model.StatusAktif.Selected(),
                                        tahunMasuk = Model.TahunMasuk.Selected(),
                                        tahunLahir = Model.TahunLahir.Selected(),
                                        jenjang = Model.Jenjang.Selected()
                                    });
                                }

                                <a href="@url" class="btn btn-warning" data-toggle="tooltip" title="Detail Biodata Siswa"><i class="fas fa-eye"></i></a>

                                <a asp-action="Edit" asp-route-id="@siswa.Id" class="btn btn-primary btn-action" data-toggle="tooltip" title="Edit Data Siswa">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form asp-action="Hapus" asp-route-id="@siswa.Id" style="display:inline" method="post">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm" data-toggle="tooltip" title="Hapus Data Siswa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ✅ Cegah error reinit
            let table = $("#save-stage2").DataTable({
                "scrollX": true,
                stateSave: true, // simpan posisi halaman
                pageLength: 50
            });

            const $filterPanel = $("#filterPanel");
            const $rows = $("#save-stage2 tbody tr");

            // Tombol toggle filter
            $("#toggleFilter").on("click", function () {
                $filterPanel.slideToggle(200);
            });

            // === Fungsi simpan & muat filter dari localStorage ===
            const filterKey = "pegawaiFilters";

            function saveFilters() {
                const selectedFilters = {};
                $(".filter:checked").each(function () {
                    const category = $(this).data("filter");
                    if (!selectedFilters[category]) selectedFilters[category] = [];
                    selectedFilters[category].push($(this).val());
                });
                localStorage.setItem(filterKey, JSON.stringify(selectedFilters));
            }

            function loadFilters() {
                const saved = localStorage.getItem(filterKey);
                if (!saved) return;
                const filters = JSON.parse(saved);

                // Centang checkbox sesuai data tersimpan
                for (const [category, values] of Object.entries(filters)) {
                    values.forEach(val => {
                        $(`.filter[data-filter="${category}"][value="${val}"]`).prop("checked", true);
                    });
                }
            }

            function applyFilters() {
                const filters = {};

                $(".filter:checked").each(function () {
                    const category = $(this).data("filter");
                    const value = $(this).val().toLowerCase();

                    if (!filters[category]) filters[category] = [];
                    filters[category].push(value);
                });

                // Custom filtering DataTables
                $.fn.dataTable.ext.search = []; // hapus filter lama

                $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
                    // data[] berisi isi kolom berdasarkan urutan th
                    const jenisKelamin = data[2].toLowerCase();
                    const agama = data[3].toLowerCase();
                    const statusPerkawinan = data[5].toLowerCase();
                    const tahunMasuk = data[9].toLowerCase();
                    const divisi = data[14].toLowerCase();

                    // periksa tiap kategori filter
                    for (const [category, values] of Object.entries(filters)) {
                        if (values.length === 0) continue;

                        let cellValue = "";
                        if (category === "jenisKelamin") cellValue = jenisKelamin;
                        if (category === "agama") cellValue = agama;
                        if (category === "statusPerkawinan") cellValue = statusPerkawinan;
                        if (category === "tahunMasuk") cellValue = tahunMasuk;
                        if (category === "divisi") cellValue = divisi;

                        if (!values.some(v => cellValue.includes(v))) {
                            return false; // baris ini tidak cocok
                        }
                    }

                    return true; // cocok semua filter
                });

                table.draw(); // refresh tampilan DataTable

                // Simpan ke localStorage
                saveFilters();
            }

            // Jalankan saat ada perubahan checkbox
            $(".filter").on("change", applyFilters);

            // Reset filter
            $("#resetFilter").on("click", function () {
                $(".filter").prop("checked", false);
                $.fn.dataTable.ext.search = []; // hapus semua filter custom
                table.search('').columns().search('').draw(); // refresh semua data
                localStorage.removeItem(filterKey);
            });

            // Muat filter tersimpan saat awal
            loadFilters();
            applyFilters();
        });
    </script>
}
@using SIAkademik.Web.Areas.DashboardAdmin.Models.Home
@model IndexVM

<section class="section">
    <div class="container-fluid mt-3 mb-3">
        <h3 class="" style="font-weight:bold;">Selamat Pagi, Admin Albert Tapatab👋</h3>
        <p class="text-muted">Pantau data akademik, kegiatan, dan statistik sekolah secara real-time.</p>

        <div class="row g-3 mt-3">
            <!-- Card Total Siswa -->
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total Siswa</h6>
                        <h3 class="fw-bold">1,245</h3>
                        <small class="text-success">+90 siswa baru semester ini</small>
                    </div>
                </div>
            </div>

            <!-- Card Total Guru -->
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total Guru</h6>
                        <h3 class="fw-bold">87</h3>
                        <small class="text-success">+2 guru baru</small>
                    </div>
                </div>
            </div>

            <!-- Card Kelas Aktif -->
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Kelas Aktif</h6>
                        <h3 class="fw-bold">36</h3>
                        <small class="text-muted">Tahun Ajaran 2025/2026</small>
                    </div>
                </div>
            </div>

            <!-- Card Jumlah Alumni -->
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Jumlah Siswa Lulus</h6>
                        <h3 class="fw-bold">300</h3>
                        <small class="text-muted">Alumni SMAK Pandhega Jaya</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Baris kedua -->
        <div class="row g-3 mt-1">
            <!-- Statistik Akademik -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Statistik Akademik</h6>
                        <p class="text-muted">Perbandingan jumlah siswa berdasarkan jenjang:</p>

                        <div clss="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-light text-center">
                                    <tr>
                                        <th>Jenjang</th>
                                        <th>Jumlah Kelas</th>
                                        <th>Jumlah Siswa</th>
                                        <th>Rata-rata Nilai</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <tr>
                                        <td>X</td>
                                        <td>12</td>
                                        <td>410</td>
                                        <td>82.3</td>
                                    </tr>
                                    <tr>
                                        <td>XI</td>
                                        <td>12</td>
                                        <td>417</td>
                                        <td>84.1</td>
                                    </tr>
                                    <tr>
                                        <td>XII</td>
                                        <td>12</td>
                                        <td>418</td>
                                        <td>86.0</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>                       
                    </div>
                </div>
            </div>

            <!-- Link Akses Cepat-->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Akses Cepat</h6>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                📋 Data Siswa
                                <a href="#" class="btn btn-primary btn-sm">Lihat</a>
                            </li>
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                👨‍🏫 Data Guru
                                <a href="#" class="btn btn-primary btn-sm">Lihat</a>
                            </li>
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                🏫 Data Kelas
                                <a href="#" class="btn btn-primary btn-sm">Lihat</a>
                            </li>
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                ⚙️ Mata Pelajaran
                                <a href="#" class="btn btn-primary btn-sm">Lihat</a>
                            </li>
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                🧾 Nilai & Penilaian
                                <a href="#" class="btn btn-primary btn-sm">Lihat</a>
                            </li>
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">                    
                                📅 Jadwal Mengajar
                                <a href="#" class="btn btn-primary btn-sm">Lihat</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-5">
            <!-- Jadwal per Hari -->
            <div class="col-lg-3 col-md-6 col-12 pr-1">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Jadwal per Hari</h6>
                        <canvas id="chartHari" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>

            <!-- Jadwal per Guru -->
            <div class="col-lg-3 col-md-6 col-12 pr-1">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Jadwal per Guru</h6>
                        <canvas id="chartGuru" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>

            <!-- Siswa per Jenis Kelamin -->
            <div class="col-lg-3 col-md-6 col-12 pr-1">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Siswa per Jenis Kelamin</h6>
                        <canvas id="chartGender" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>

            <!-- Siswa per Kelas -->
            <div class="col-lg-3 col-md-6 col-12">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Siswa per Kelas</h6>
                        <canvas id="chartKelas" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/chart-chartjs.js" asp-append-version="true"></script>

    <script>
        // Jadwal per Hari
        new Chart(document.getElementById('chartHari'), {
            type: 'bar',
            data: {
                labels: ["Senin", "Selasa", "Rabu", "Kamis", "Jumat"],
                datasets: [{
                    label: "Jumlah Jadwal",
                    data: [5, 3, 7, 4, 6],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderRadius: 6
                }]
            }
        });

        // Jadwal per Guru
        new Chart(document.getElementById('chartGuru'), {
            type: 'bar',
            data: {
                labels: ["Guru A", "Guru B", "Guru C", "Guru D"],
                datasets: [{
                    label: "Jumlah Jadwal",
                    data: [8, 6, 4, 5],
                    backgroundColor: 'rgba(255, 99, 132, 0.6)',
                    borderRadius: 6
                }]
            }
        });

        // Siswa per Jenis Kelamin
        new Chart(document.getElementById('chartGender'), {
            type: 'doughnut',
            data: {
                labels: ["Laki-laki", "Perempuan"],
                datasets: [{
                    label: "Jumlah Siswa",
                    data: [120, 98],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderWidth: 1
                }]
            }
        });

        // Siswa per Kelas
        new Chart(document.getElementById('chartKelas'), {
            type: 'bar',
            data: {
                labels: ["X", "XI", "XII"],
                datasets: [{
                    label: "Jumlah Siswa",
                    data: [85, 90, 70],
                    backgroundColor: 'rgba(153, 102, 255, 0.6)',
                    borderRadius: 6
                }]
            }
        });
    </script>
}
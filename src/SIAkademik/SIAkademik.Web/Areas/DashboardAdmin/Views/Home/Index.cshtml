                            <h4 class="text-muted font-12" style="font-weight: 500">Total Rombel</h4>
                        </div>
                    </div>
                                      
                </div>
                <div class="card-body pt-0">

                    <ul class="list-unstyled list-unstyled-border">

                        @foreach(var rombel in Model.DaftarRombel.Take(4)) 
                        {

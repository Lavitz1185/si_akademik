                                <div class="btn btn-icon icon-left btn-danger">
                                    <i class="fas fa-chalkboard mr-0"></i>
                                </div>
                                <div class="media-body pt-2">
                                    <div class="float-right">
                                        <div class="font-weight-600 text-muted text-small">@rombel.DaftarAnggotaRombel.Count Org</div>
                                    </div>
                                    <div class="media-title font-12 pl-2">@rombel.Kelas.Jenjang.Humanize() @rombel.Kelas.Peminatan.Nama @rombel.Nama</div>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
                <a asp-area="@AreaNames.DashboardAdmin" asp-controller="Rombel" asp-action="Index" asp-route-idTahunAjaran="@Model.TahunAjaran?.Id" data-match="partial" class="card-link text-right pb-3 pr-3">
                    Lihat Detail
                </a>

@section Scripts {
    <script src="~/js/chart-chartjs.js" asp-append-version="true"></script>

    <script>
        // Jadwal per Hari
        new Chart(document.getElementById('chartHari'), {
            type: 'bar',
            data: {
                labels: ["Senin", "Selasa", "Rabu", "Kamis", "Jumat"],
                datasets: [{
                    label: "Jumlah Jadwal",
                    data: [5, 3, 7, 4, 6],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderRadius: 6
                }]
            }
        });

        // Jadwal per Guru
        new Chart(document.getElementById('chartGuru'), {
            type: 'bar',
            data: {
                labels: ["Guru A", "Guru B", "Guru C", "Guru D"],
                datasets: [{
                    label: "Jumlah Jadwal",
                    data: [8, 6, 4, 5],
                    backgroundColor: 'rgba(255, 99, 132, 0.6)',
                    borderRadius: 6
                }]
            }
        });

        // Siswa per Jenis Kelamin
        new Chart(document.getElementById('chartGender'), {
            type: 'doughnut',
            data: {
                labels: ["Laki-laki", "Perempuan"],
                datasets: [{
                    label: "Jumlah Siswa",
                    data: [120, 98],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderWidth: 1
                }]
            }
        });

        // Siswa per Kelas
        new Chart(document.getElementById('chartKelas'), {
            type: 'bar',
            data: {
                labels: ["X", "XI", "XII"],
                datasets: [{
                    label: "Jumlah Siswa",
                    data: [85, 90, 70],
                    backgroundColor: 'rgba(153, 102, 255, 0.6)',
                    borderRadius: 6
                }]
            }
        });
    </script>
}
@using SIAkademik.Web.Areas.DashboardAdmin.Models.Home
@model IndexVM

<section class="section">

    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="card" style="height: 355px;">
                <div class="card-header">
                    <h4>Siswa</h4> <hr>
                    <h4 class="text-muted font-12" style="font-weight: 500">@Model.TahunAjaran?.Periode @Model.TahunAjaran?.Semester.Humanize()</h4>
                </div>
                <div class="card-body pt-0">
                    <canvas id="genderChart"></canvas>
                    <div class="justify-content-center media p-t-10 p-b-20">
                        <div class="media-items">
                            <div class="media-item">
                                <div class="media-value font-24" style="color: #000">@Model.DaftarSiswa.Count</div>
                                <div class="media-label">Total</div>
                            </div>
                        </div>
                    </div>
                    <div class="justify-content-center media p-t-3">
                        <div class="media-items">
                            <div class="media-item">
                                <div class="media-value" id="jumlahPerempuan" style="color: #000">@Model.DaftarSiswa.Where(s => s.JenisKelamin == JenisKelamin.Perempuan).Count()</div>
                                <div class="media-label"><span><i class="fa fa-circle m-r-5 col-pink"></i></span>Perempuan</div>
                            </div>
                        </div>
                        <div class="media-items">
                            <div class="media-item">
                                <div class="media-value" id="jumlahLakiLaki" style="color: #000">@Model.DaftarSiswa.Where(s => s.JenisKelamin == JenisKelamin.LakiLaki).Count()</div>
                                <div class="media-label"><span><i class="fa fa-circle m-r-5 col-blue"></i></span>Laki-Laki</div>
                            </div>
                        </div>
                    </div>

                </div>
                <a asp-area="@AreaNames.DashboardAdmin" asp-controller="Siswa" asp-action="Index" class="card-link text-right pb-3 pr-3">
                    Lihat Detail
                </a>
            </div>
        </div>

        <div class="row g-3 mt-5">
            <!-- Jadwal per Hari -->
            <div class="col-lg-3 col-md-6 col-12 pr-1">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Jadwal per Hari</h6>
                        <canvas id="chartHari" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>

            <!-- Jadwal per Guru -->
            <div class="col-lg-3 col-md-6 col-12 pr-1">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Jadwal per Guru</h6>
                        <canvas id="chartGuru" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>

            <!-- Siswa per Jenis Kelamin -->
            <div class="col-lg-3 col-md-6 col-12 pr-1">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Siswa per Jenis Kelamin</h6>
                        <canvas id="chartGender" style="width:100%; height:260px;"></canvas>
                    </div>
                </div>
            </div>

            <!-- Siswa per Kelas -->
            <div class="col-lg-3 col-md-6 col-12">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="card-title text-center">Siswa per Kelas</h6>
                        <canvas id="chartKelas" style="width:100%; height:260px;"></canvas>
                    </div>

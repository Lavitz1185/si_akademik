        </select>
        <span asp-validation-for="@Model.StatusHidupIbu"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.PendidikanTerakhirIbu"></label>
        <input asp-for="@Model.PendidikanTerakhirIbu" />
        <span asp-validation-for="@Model.PendidikanTerakhirIbu"></span>
    </div>

    <h1>Data Wali</h1>
    <div class="row">
        <label asp-for="@Model.NamaWali"></label>
        <input asp-for="@Model.NamaWali" />
        <span asp-validation-for="@Model.NamaWali"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.NIKWali"></label>
        <input asp-for="@Model.NIKWali" />
        <span asp-validation-for="@Model.NIKWali"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.PekerjaanWali"></label>
        <input asp-for="@Model.PekerjaanWali" />
        <span asp-validation-for="@Model.PekerjaanWali"></span>

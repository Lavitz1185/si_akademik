        <span asp-validation-for="@Model.TanggalLahirAyah"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.StatusHidupAyah"></label>
        <select asp-for="@Model.StatusHidupAyah">
            @foreach(var status in Enum.GetValues<StatusHidup>())
            {
                <option value="@status">@status.Humanize()</option>
            }
        </select>
        <span asp-validation-for="@Model.StatusHidupAyah"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.PendidikanTerakhirAyah"></label>
        <input asp-for="@Model.PendidikanTerakhirAyah" />
        <span asp-validation-for="@Model.PendidikanTerakhirAyah"></span>
    </div>

    <h1>Data Ibu</h1>
    <div class="row">

        <label asp-for="@Model.PekerjaanAyah"></label>
        <input asp-for="@Model.PekerjaanAyah" />
        <span asp-validation-for="@Model.PekerjaanAyah"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.AgamaAyah"></label>
        <select asp-for="@Model.AgamaAyah">
            @foreach(var agama in Enum.GetValues<Agama>())
            {
                <option value="@agama">@agama.Humanize()</option>
            }
        </select>
        <span asp-validation-for="@Model.AgamaAyah"></span>
    </div>
    <div class="row">
        <label asp-for="@Model.NoHPAyah"></label>
        <input asp-for="@Model.NoHPAyah" />
        <span asp-validation-for="@Model.NoHPAyah"></span>

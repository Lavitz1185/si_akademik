@using SIAkademik.Web.Areas.DashboardSiswa.Models.JadwalMengajarModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardSiswa" asp-controller="JadwalMengajar" asp-action="Index"></a>Jadwal Kelas</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-warning mb-2">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Jadwal Kelas Siswa</h4>
                </div>

                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">NISN/NIS</div>
                                <div class="col">@Model.Siswa.NISN/@Model.Siswa.NIS</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Nama</div>
                                <div class="col">@Model.Siswa.Nama</div>
                            </div>
                            @if (Model.AnggotaRombel is not null)
                            {
                                <div class="row mb-1">
                                    <div class="col-3" style="font-weight:600;">Kelas</div>
                                    <div class="col">@Model.AnggotaRombel.Rombel.Kelas.Jenjang.Humanize() @Model.AnggotaRombel.Rombel.Kelas.Peminatan.Nama @Model.AnggotaRombel.Rombel.Nama</div>
                                </div>
                            }                            
                        </div>

                        <!-- Kolom kanan -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Jenjang</div>
                                <div class="col">@Model.Siswa.Jenjang.Humanize()</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Status</div>
                                <div class="col">@Model.Siswa.StatusAktif.Humanize()</div>
                            </div>
                            @if (Model.AnggotaRombel is not null)
                            {
                                <div class="row mb-1">
                                    <div class="col-3" style="font-weight:600;">Wali Kelas</div>
                                    <div class="col">@Model.AnggotaRombel.Rombel.Wali.Nama</div>
                                </div>
                            }                            
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">

                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <p class="mb-0 pr-2">Periode</p>
                        <form asp-action="Index" method="get">
                            <select asp-for="@Model.IdTahunAjaran" class="form-control w-auto pt-0 pb-0" style="height: 35px !important;">
                                @if (Model.IdTahunAjaran is null)
                                {
                                    <option value="@null">-- Pilih Tahun Ajaran</option>
                                }
                                @foreach (var tahunAjaran in daftarTahunAjaran)
                                {
                                    <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                                }
                            </select>
                        </form>
                    </div>

                    <table class="table table-striped table-hover" id="table-akun">
                        <thead>
                            <tr>
                                <th>Hari</th>
                                <th>Jam</th>
                                <th>Mata Pelajaran</th>
                                <th>Kelas</th>
                                <th>Guru</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TahunAjaran is null)
                            {
                                <tr>
                                    <td colspan="7">Belum ada tahun ajaran yang dibuka</td>
                                </tr>
                            }
                            else
                            {
                                @if (Model.AnggotaRombel is null)
                                {
                                    <tr>
                                        <td colspan="7">Tidak ada kelas di tahun ajaran ini</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var hari in Model.DaftarJadwalMengajar.SelectMany(j => j.DaftarHariMengajar).OrderBy(h => h.Hari).ThenBy(h => h.JamMulai))
                                    {
                                        <tr>
                                            <td>@hari.Hari.Humanize()</td>
                                            <td>@hari.JamMulai.ToShortTimeString() - @hari.JamAkhir.ToShortTimeString()</td>
                                            <td>@hari.JadwalMengajar.MataPelajaran.Nama</td>
                                            <td>
                                                @hari.JadwalMengajar.Rombel.Kelas.Jenjang.Humanize()
                                                @hari.JadwalMengajar.Rombel.Kelas.Peminatan.Nama
                                                @hari.JadwalMengajar.Rombel.Nama
                                            </td>
                                            <td>@hari.JadwalMengajar.Pegawai.Nama</td>
                                            <td>
                                                <a asp-action="Detail" asp-route-id="@hari.JadwalMengajar.Id" class="btn btn-warning">Detail</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('select#IdTahunAjaran').on('change', function() {
                $(this).closest('form').trigger('submit');
            });
        });
    </script>
}
@using SIAkademik.Web.Areas.DashboardSiswa.Models.NilaiModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<p>
    NISN/NIS : @Model.Siswa.NISN/@Model.Siswa.NIS <br />
    Nama : @Model.Siswa.Nama <br />
    Jenjang : @Model.Siswa.Jenjang.Humanize() <br />
    Status : @Model.Siswa.StatusAktif.Humanize() <br />
</p>

@if(Model.AnggotaRombel is not null)
{
    <p>
        Kelas : @Model.AnggotaRombel.Rombel.Kelas.Jenjang.Humanize() @Model.AnggotaRombel.Rombel.Kelas.Peminatan.Nama @Model.AnggotaRombel.Rombel.Nama <br />
        Wali Kelas : @Model.AnggotaRombel.Rombel.Wali.Nama
    </p>
}

<form asp-action="Index" method="get">
    <select asp-for="@Model.IdTahunAjaran">
        @if (Model.IdTahunAjaran is null)
        {
            <option value="@null">-- Pilih Tahun Ajaran</option>
        }
        @foreach (var tahunAjaran in daftarTahunAjaran)
        {
            <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
        }
    </select>
</form>

<table>
    <thead>
        <tr>
            <th rowspan="2">Mata Pelajaran</th>
            <th rowspan="2">Guru</th>
            <th colspan="2">Nilai Komponen</th>
            <th rowspan="2">Nilai Akhir</th>
            <th rowspan="2">Aksi</th>
        </tr>
        <tr>
            <th>Komponen</th>
            <th>Nilai</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.TahunAjaran is null)
        {
            <tr>
                <td colspan="7">Belum ada tahun ajaran yang dibuka</td>
            </tr>
        }
        else
        {
            @if (Model.AnggotaRombel is null)
            {
                <tr>
                    <td colspan="7">Tidak ada kelas di tahun ajaran ini</td>
                </tr>
            }
            else
            {
                @foreach (var jadwal in Model.DaftarJadwalMengajar)
                {
                    <tr>
                        <td rowspan="4">@jadwal.MataPelajaran.Nama</td>
                        <td rowspan="4">@jadwal.Pegawai.Nama</td>
                        <td>Tugas</td>
                        <td>
                            @Model.AnggotaRombel.RataTugas(jadwal).ToString("F1") 
                            (@Model.AnggotaRombel.DaftarNilai.Where(n => n.JadwalMengajar == jadwal && n.Jenis == JenisNilai.Tugas).Count())
                        </td>
                        <td rowspan="4">@Model.AnggotaRombel.NilaiAkhir(jadwal).ToString("F1")</td>
                        <td rowspan="4">
                            <a asp-action="Detail" asp-route-idJadwalMengajar="@jadwal.Id">Detail</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Ulangan Harian</td>
                        <td>
                            @Model.AnggotaRombel.RataUH(jadwal).ToString("F1")
                            (@Model.AnggotaRombel.DaftarNilai.Where(n => n.JadwalMengajar == jadwal && n.Jenis == JenisNilai.UH).Count())
                        </td>
                    </tr>
                    <tr>
                        <td>UTS</td>
                        <td>@Model.AnggotaRombel.NilaiUTS(jadwal).ToString("F1")</td>
                    </tr>
                    <tr>
                        <td>UAS</td>
                        <td>@Model.AnggotaRombel.NilaiUAS(jadwal).ToString("F1")</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('select#IdTahunAjaran').on('change', function() {
                $(this).closest('form').trigger('submit');
            });
        });
    </script>
}
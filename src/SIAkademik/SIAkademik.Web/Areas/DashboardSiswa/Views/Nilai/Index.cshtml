@using SIAkademik.Web.Areas.DashboardSiswa.Models.NilaiModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IJadwalMengajarRepository JadwalMengajarRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardSiswa" asp-controller="Nilai" asp-action="Index"></a>Nilai</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-primary mb-2">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Daftar Nilai</h4>
                </div>

                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row gy-3">
                        <!-- Kolom kiri -->
                        <div class="col-12 col-lg-6">
                            <div class="row mb-2">
                                <div class="col-12 col-sm-4" style="font-weight: 600">NISN/NIS</div>
                                <div class="col-12 col-sm-8">@Model.Siswa.NISN / @Model.Siswa.NIS</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-12 col-sm-4" style="font-weight: 600">Nama</div>
                                <div class="col-12 col-sm-8">@Model.Siswa.Nama</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-12 col-sm-4" style="font-weight: 600">Status</div>
                                <div class="col-12 col-sm-8">@Model.Siswa.StatusAktif.Humanize()</div>
                            </div>
                        </div>

                        <!-- Kolom kanan -->
                        <div class="col-12 col-lg-6">
                            <div class="row mb-2">
                                <div class="col-12 col-sm-4" style="font-weight: 600">Jenjang</div>
                                <div class="col-12 col-sm-8">@Model.Siswa.Jenjang.Humanize()</div>
                            </div>
                            @if (Model.AnggotaRombel is not null)
                            {
                                <div class="row mb-2">
                                    <div class="col-12 col-sm-4" style="font-weight: 600">Wali Kelas</div>
                                    <div class="col-12 col-sm-8">@Model.AnggotaRombel.Rombel.Wali.Nama</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12 col-sm-4" style="font-weight: 600">Kelas</div>
                                    <div class="col-12 col-sm-8">
                                        @Model.AnggotaRombel.Rombel.Kelas.Jenjang.Humanize()
                                        @Model.AnggotaRombel.Rombel.Kelas.Peminatan.Nama
                                        @Model.AnggotaRombel.Rombel.Nama
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">

                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <form asp-action="Index" method="get" class="d-flex align-items-center" style="gap: 8px;">
                            <label asp-for="@Model.IdTahunAjaran" class="mb-0" style="font-weight: 600;">Tahun Ajaran:</label>
                            <select asp-for="@Model.IdTahunAjaran" class="form-control form-control-sm w-auto submit-on-change">
                                @if (Model.IdTahunAjaran is null)
                                {
                                    <option value="@null">-- Pilih Tahun Ajaran</option>
                                }
                                @foreach (var tahunAjaran in daftarTahunAjaran)
                                {
                                    <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                                }
                            </select>
                        </form>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="table-akun">
                            <thead>
                                <tr>
                                    <th rowspan="2">Mata Pelajaran</th>
                                    <th rowspan="2">Guru</th>
                                    <th rowspan="2">Nilai Akhir Semester</th>
                                    <th rowspan="2">Rata-Rata Nilai Asesmen Sumatif</th>
                                    <th rowspan="2">Nilai Akhir</th>
                                    <th colspan="4">Nilai Asesmen Sumatif</th>
                                </tr>
                                <tr>
                                    <th>Tujuan Pembelajaran</th>
                                    <th>Rata-Rata Nilai</th>
                                    <th>Predikat</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TahunAjaran is null)
                                {
                                    <tr>
                                        <td colspan="7">Belum ada tahun ajaran yang dibuka</td>
                                    </tr>
                                }
                                else
                                {
                                    @if (Model.AnggotaRombel is null)
                                    {
                                        <tr>
                                            <td colspan="7">Tidak ada kelas di tahun ajaran ini</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        var daftarJadwalMengajar = await JadwalMengajarRepository.GetAllByTahunAjaran(Model.TahunAjaran.Id);
                                        daftarJadwalMengajar = daftarJadwalMengajar.Where(j => j.Rombel == Model.AnggotaRombel.Rombel).ToList();

                                        @foreach (var jadwalMengajar in daftarJadwalMengajar)
                                        {
                                            var rowspan = jadwalMengajar.DaftarAsesmenSumatif.Count + 1;
                                            var nilaiAkhirSemester = jadwalMengajar
                                                .DaftarAsesmenSumatifAkhirSemester
                                                .FirstOrDefault(a => a.AnggotaRombel == Model.AnggotaRombel)?.Nilai;

                                            <tr>
                                                <td rowspan="@rowspan">@jadwalMengajar.MataPelajaran.Nama</td>
                                                <td rowspan="@rowspan">@jadwalMengajar.Pegawai.Nama</td>
                                                <td rowspan="@rowspan">@nilaiAkhirSemester</td>
                                                <td rowspan="@rowspan">@Model.AnggotaRombel.RataNilai(jadwalMengajar)</td>
                                                <td rowspan="@rowspan">@Model.AnggotaRombel.NilaiAkhir(jadwalMengajar)</td>
                                            </tr>

                                            @foreach (var asesmenSumatif in jadwalMengajar.DaftarAsesmenSumatif.OrderBy(a => a.TujuanPembelajaran.Nomor))
                                            {
                                                <tr>
                                                    <td>@asesmenSumatif.TujuanPembelajaran.Nomor). @asesmenSumatif.TujuanPembelajaran.Deskripsi</td>
                                                    <td>@asesmenSumatif.RataNilai(Model.AnggotaRombel)</td>
                                                    <td>@asesmenSumatif.Predikat(Model.AnggotaRombel)</td>
                                                    <td>
                                                        <a asp-action="Detail" asp-route-idAsesmenSumatif="@asesmenSumatif.Id" asp-route-idTahunAjaran="@Model.TahunAjaran.Id" class="btn btn-warning" data-toggle="tooltip" title="Detail Pertemuan"><i class="fas fa-eye"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
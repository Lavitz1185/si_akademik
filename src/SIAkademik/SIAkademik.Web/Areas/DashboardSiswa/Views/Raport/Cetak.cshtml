@using SIAkademik.Web.Areas.DashboardGuru.Controllers
@model AnggotaRombel

@{
    ViewData["Title"] = "Cetak Rapor";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardSiswa" asp-controller="Raport" asp-action="Index">Rapor</a></li>
            <li class="breadcrumb-item" aria-current="page">Cetak Rapor</li>
        </ol>
    </nav>
</div>

@* <a asp-action="RaportPDF" asp-route-idRombel="@Model.Rombel.Id" asp-route-download="@true">Download</a> *@

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-warning mb-2" style="height: calc(100vh - 150px);>
                <div class="card-body" style="height: 100%;">
                    <embed class="pdf" src="@Url.ActionLink(nameof(RaportController.RaportPDF), "Raport", new { idRombel = Model.Rombel.Id, download = false })"
                           width="100%"
                           height="100%" />
                </div>
            </div>
        </div>
    </div>
</div>


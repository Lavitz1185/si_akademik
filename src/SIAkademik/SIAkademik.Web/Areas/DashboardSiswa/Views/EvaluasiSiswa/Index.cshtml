@using SIAkademik.Web.Areas.DashboardSiswa.Models.NilaiModels
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository

@{
    var daftarTahunAjaran = await TahunAjaranRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Akademik</a></li>
            <li class="breadcrumb-item"><a asp-area="@AreaNames.DashboardSiswa" asp-controller="EvaluasiSiswa" asp-action="Index"></a>Nilai Siswa</li>
        </ol>
    </nav>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-12">
            <div class="card card-info mb-2">

                <div class="card-header" style="padding-top: 20px;">
                    <h4>Nilai Siswa</h4>
                </div>

                <div class="card-body rounded" style="background-color: #f0f7fd; margin-left: 25px; margin-right: 25px; margin-bottom: 20px;">
                    <div class="row">
                        <!-- Kolom kiri -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">NISN/NIS</div>
                                <div class="col">@Model.Siswa.NISN/@Model.Siswa.NIS</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Nama</div>
                                <div class="col">@Model.Siswa.Nama</div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Status</div>
                                <div class="col">@Model.Siswa.StatusAktif.Humanize()</div>
                            </div>
                        </div>

                        <!-- Kolom kanan -->
                        <div class="col-md-6">
                            <div class="row mb-1">
                                <div class="col-3" style="font-weight:600;">Jenjang</div>
                                <div class="col">@Model.Siswa.Jenjang.Humanize()</div>
                            </div>
                            @if (Model.AnggotaRombel is not null)
                            {
                                <div class="row mb-1">
                                    <div class="col-3" style="font-weight:600;">Wali Kelas</div>
                                    <div class="col">@Model.AnggotaRombel.Rombel.Wali.Nama</div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-3" style="font-weight:600;">Kelas</div>
                                    <div class="col">@Model.AnggotaRombel.Rombel.Kelas.Jenjang.Humanize() @Model.AnggotaRombel.Rombel.Kelas.Peminatan.Nama @Model.AnggotaRombel.Rombel.Nama</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>               
            </div>

            <div class="card">

                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <p class="mb-0 pr-2">Periode</p>
                        <form asp-action="Index" method="get">
                            <select asp-for="@Model.IdTahunAjaran" class="form-control w-auto pt-0 pb-0" style="height: 35px !important;">
                                @if (Model.IdTahunAjaran is null)
                                {
                                    <option value="@null">-- Pilih Tahun Ajaran</option>
                                }
                                @foreach (var tahunAjaran in daftarTahunAjaran)
                                {
                                    <option value="@tahunAjaran.Id">@tahunAjaran.Periode @tahunAjaran.Semester.Humanize()</option>
                                }
                            </select>
                        </form>
                    </div>                    

                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="table-akun">
                            <thead>
                                <tr>
                                    <th rowspan="2">Mata Pelajaran</th>
                                    <th rowspan="2">Guru</th>
                                    <th colspan="2">Nilai Komponen</th>
                                    <th rowspan="2">Nilai Akhir</th>
                                    <th rowspan="2">Aksi</th>
                                </tr>
                                <tr>
                                    <th>Komponen</th>
                                    <th>Nilai</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TahunAjaran is null)
                                {
                                    <tr>
                                        <td colspan="7">Belum ada tahun ajaran yang dibuka</td>
                                    </tr>
                                }
                                else
                                {
                                    @if (Model.AnggotaRombel is null)
                                    {
                                        <tr>
                                            <td colspan="7">Tidak ada kelas di tahun ajaran ini</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var jadwal in Model.DaftarJadwalMengajar)
                                        {
                                            <tr>
                                                <td rowspan="4">@jadwal.MataPelajaran.Nama</td>
                                                <td rowspan="4">@jadwal.Pegawai.Nama</td>
                                                <td>Tugas</td>
                                                <td>
                                                    @Model.AnggotaRombel.RataTugas(jadwal).ToString("F1")
                                                    (@Model.AnggotaRombel.DaftarEvaluasiSiswa.Where(n => n.JadwalMengajar == jadwal && n.Jenis == JenisNilai.Tugas).Count())
                                                </td>
                                                <td rowspan="4">@Model.AnggotaRombel.NilaiAkhir(jadwal).ToString("F1")</td>
                                                <td rowspan="4">
                                                    <a asp-action="Detail" asp-route-idJadwalMengajar="@jadwal.Id" class="btn btn-warning" data-toggle="tooltip" title="Detail Nilai"><i class="fas fa-eye"></i></a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Ulangan Harian</td>
                                                <td>
                                                    @Model.AnggotaRombel.RataUH(jadwal).ToString("F1")
                                                    (@Model.AnggotaRombel.DaftarEvaluasiSiswa.Where(n => n.JadwalMengajar == jadwal && n.Jenis == JenisNilai.UH).Count())
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>UTS</td>
                                                <td>@Model.AnggotaRombel.NilaiUTS(jadwal).ToString("F1")</td>
                                            </tr>
                                            <tr>
                                                <td>UAS</td>
                                                <td>@Model.AnggotaRombel.NilaiUAS(jadwal).ToString("F1")</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('select#IdTahunAjaran').on('change', function() {
                $(this).closest('form').trigger('submit');
            });
        });
    </script>
}
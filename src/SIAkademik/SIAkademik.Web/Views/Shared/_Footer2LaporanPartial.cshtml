@model AnggotaRombel

@{
    Layout = null;
}

<style>
    #nomorHalaman {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    #footerLaporan {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
        font-family: Calibri !important;
        font-size: 11px !important;
        font-weight:bold;
        color: black !important;
        width: 100%;
        padding-left: 80px;
        padding-right: 80px;
    }
</style>

<div id="footerLaporan">
    <div>
        <hr style="color:black !important;background-color:black !important;border-style:solid;border-width:0.5px" />
    </div>
    <div id="nomorHalaman">
        <p style="margin-right:auto">@Model.Rombel.Kelas.Jenjang.Humanize() @Model.Rombel.Nama | @Model.Siswa.Nama</p>
        <p style="margin-left:auto">Halaman : <span class="pageNumber"></span></p>
    </div>
</div>